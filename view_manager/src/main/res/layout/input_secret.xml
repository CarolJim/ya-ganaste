<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:background="@drawable/input_text_normal"
        android:gravity="center_vertical"
        android:hint="@string/hint_new_nip"
        android:theme="@style/AppThemeIn"
        app:counterEnabled="true"
        app:counterMaxLength="1"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextAppearance="@style/TextLabel"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_input_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textColorHint="@android:color/white"
            android:cursorVisible="false"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ast_one"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1"
            android:src="@drawable/ic_asterisk"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"/>

        <View

            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/gray_off"/>
        <ImageView
            android:id="@+id/ast_two"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1"
            android:src="@drawable/ic_asterisk"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"/>
        <View

            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/gray_off"/>
        <ImageView
            android:id="@+id/ast_three"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1"
            android:src="@drawable/ic_asterisk"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"/>
        <View

            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="@color/gray_off"/>
        <ImageView
            android:id="@+id/ast_four"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1"
            android:src="@drawable/ic_asterisk"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>
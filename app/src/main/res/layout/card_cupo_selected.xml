<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="5dp"
    android:paddingLeft="21dp"
    android:paddingRight="5dp"
    android:paddingStart="21dp"
    android:paddingTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/saldo_disponible"
            android:textSize="12sp"
            app:tipo="Text" />

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <com.pagatodo.yaganaste.utils.customviews.MontoTextView
            android:id="@+id/saldoDisponible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/greencolor222"
            android:textSize="8sp"
            app:decimalLenght="0"
            app:dotBottom="true" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekLineaCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:longClickable="false"
        android:progress="20"
        android:progressDrawable="@drawable/seek_bar_card_selected_cupo"
        android:thumb="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/titleTotalDepositar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/total_depositar"
                android:textColor="@color/redcolor23"
                android:textSize="11sp"
                app:tipo="Descripcion" />

            <com.pagatodo.yaganaste.utils.customviews.MontoTextView
                android:id="@+id/montoTotalDepositar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="6sp"
                app:dotBottom="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/linea_credito_cupo"
                android:textColor="@color/bluecolor_disable"
                android:textSize="11sp"
                app:tipo="Descripcion" />

            <com.pagatodo.yaganaste.utils.customviews.MontoTextView
                android:id="@+id/montoLineaCredito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="6sp"
                app:dotBottom="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/head_menu"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLoginExistProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_user"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txt_name_user"
        style="@style/generic_text_style_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="Ismael Cruz"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/btn_qr_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/qr_profile" />

    </LinearLayout>
</LinearLayout>
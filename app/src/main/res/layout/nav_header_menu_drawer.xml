<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLoginExistProfile"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@mipmap/icon_user_fail"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/colorAccent"
        android:layout_marginTop="47dp"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txt_name_user"
        style="@style/generic_text_style_2"
        android:textColor="@color/whiteColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ismael Cruz"
        android:layout_marginTop="8dp"
        android:layout_below="@id/imgLoginExistProfile"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
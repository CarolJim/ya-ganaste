<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_child_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="100">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />


    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtDepositTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:text="@string/datos_deposito"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/frag_depositos_titulo_text_size"
        app:tipo="Subtitulo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25">

        <ImageView
            android:id="@+id/imgYaGanasteCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/main_card_zoom_blue" />

    </RelativeLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtTitularTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|bottom"
        android:text="@string/datos_deposito_titular"
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtNameTitular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|top"
        android:text=""
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtNumberTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|bottom"
        android:text="@string/datos_deposito_num_card"
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtNumberCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|top"
        android:text=""
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtCableTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|bottom"
        android:text="@string/datos_deposito_clabe"
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtCableNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center|top"
        android:text=""
        android:textSize="@dimen/frag_depositos_datos_text_size"
        app:tipo="Descripcion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="51"
        android:gravity="center">

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btnDepositar"
            style="@style/buttonSquareRoundedBlue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btns"
            android:gravity="center"
            android:text="@string/datos_deposito_donde_depos"
            android:textAllCaps="false"
            android:textSize="@dimen/generic_button_normal_text_size" />

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_child_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgraund_wallet"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <View
        android:id="@+id/toolbar_alternative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/background_toolbar"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtDepositTitle"
        style="@style/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/datos_deposito"/>

    <RelativeLayout
        android:id="@+id/qr_zone"
        android:layout_below="@id/txtDepositTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp">

        <ImageView
            android:id="@+id/imgYaGanasteQR"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:background="@drawable/blue_border_rectangle"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:scaleType="center"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/text_data_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_card"
        android:layout_margin="8dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:visibility="visible"
        android:layout_below="@id/qr_zone">
    </ListView>


</RelativeLayout>
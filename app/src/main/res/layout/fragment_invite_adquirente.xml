<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/back_invite_adq"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:weightSum="21"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.pagatodo.yaganaste.utils.customviews.MaterialButton
            android:id="@+id/btn_mas_tarde"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="@string/mas_tarde"
            style="@style/ButtonInviteAdq"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.pagatodo.yaganaste.utils.customviews.MaterialButton
            android:id="@+id/btn_si"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            style="@style/ButtonInviteAdqY"/>

    </LinearLayout>

</LinearLayout>

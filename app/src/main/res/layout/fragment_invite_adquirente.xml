<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/back_invite_adq" />


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/btn_navigation_bottom"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="21">

            <com.pagatodo.yaganaste.utils.customviews.MaterialButton
                android:id="@+id/btn_mas_tarde"
                style="@style/ButtonInviteAdq"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:textSize="@dimen/size_text_style_2_value"
                android:layout_weight="8"
                android:text="@string/mas_tarde" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.pagatodo.yaganaste.utils.customviews.MaterialButton
                android:id="@+id/btn_si"
                style="@style/ButtonInviteAdqY" android:textSize="@dimen/size_text_style_2_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/yes" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

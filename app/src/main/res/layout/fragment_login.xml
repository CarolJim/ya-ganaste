<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <LinearLayout
        android:id="@+id/linerar_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_header_yg_login"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/colorAccent"
                android:padding="31dp"
                app:srcCompat="@drawable/ic_logo_header" />

            <LinearLayout
                android:id="@+id/lyt_img_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_circle_border_shadow">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgLoginExistProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@mipmap/icon_user" />
            </LinearLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/textNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                app:tipo="Text" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_set_credentials"
                style="@style/generic_text_style_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="8dp"
                android:text="@string/set_credentials_login_2"
                android:textAlignment="center" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/inputtext_normal"
                android:gravity="center_vertical"
                android:hint="@string/correo_electronico"
                android:maxLines="1"
                android:textColorHint="@color/texthint"
                app:counterEnabled="true"
                app:counterMaxLength="1"
                app:hintTextAppearance="@style/HintText"
                app:counterOverflowTextAppearance="@style/CounterOverFlow"
                app:passwordToggleTint="@color/colorAccent"
                >

                <EditText
                    android:id="@+id/editUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme ="@style/NewEdittextwallet"
                    android:layout_marginBottom="9dp"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/grayColor"
                    android:textColorHint="@color/texthint" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/inputtext_normal"
                android:gravity="center_vertical"
                android:hint="@string/txt_escribe_tu_pass"
                android:maxLines="1"
                android:textColorHint="@color/texthint"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/editUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionDone"
                    android:theme ="@style/NewEdittextwallet"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/texthint" />

            </android.support.design.widget.TextInputLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtLoginExistUserRecoverPass"
                style="@style/textDescInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:padding="@dimen/margin_medium"
                android:text="@string/recover_pass"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnLoginExistUser"
                style="@style/buttonSquareRoundedBlue"
                android:layout_marginBottom="@dimen/margin_error"
                android:background="@drawable/button_rounded_blue"
                android:text="@string/next" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtVersionApp"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
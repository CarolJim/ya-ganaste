<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <LinearLayout
        android:id="@+id/linerar_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_header_yg_login"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@color/colorAccent"
                android:padding="31dp"
                app:srcCompat="@drawable/ic_logo_header" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLoginExistProfile"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@mipmap/icon_user"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/textNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                app:tipo="Titulo" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_set_credentials"
                style="@style/generic_text_style_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:padding="@dimen/margin_medium"
                android:text="@string/set_credentials_login_2"
                android:textAlignment="center" />

            <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                android:id="@+id/editUserName"
                style="@style/GenericInputTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:clickable="true"
                android:imeOptions="actionNext"
                app:formato="email"
                app:hintText="@string/txt_escribe_tu_correo"
                app:isTextEnabled="true" />

            <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                android:id="@+id/editUserPassword"
                style="@style/GenericInputTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:clickable="true"
                app:formato="password"
                app:hintText="@string/txt_escribe_tu_pass"
                app:isTextEnabled="true" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtLoginExistUserRecoverPass"
                style="@style/textDescInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="@dimen/margin_medium"
                android:text="@string/recover_pass"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnLoginExistUser"
                style="@style/buttonSquareRoundedBlue"
                android:layout_marginBottom="@dimen/margin_error"
                android:background="@drawable/button_rounded_blue"
                android:text="@string/next" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtVersionApp"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



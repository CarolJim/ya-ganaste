<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/layoutImagenLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/generic_padig">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLoginExistProfile"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:src="@mipmap/icon_user"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutImagenLogin"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/edtxtUserName"
            style="@style/InputTextForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtxtUserPass"
            android:hint="@string/txt_escribe_tu_pass"
            app:formato="email"
            android:inputType="textPassword" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/edtxtUserPass"
            style="@style/InputTextForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnLoginExistUser"
            android:hint="@string/txt_escribe_tu_pass"
            app:formato="password"
            android:inputType="textPassword" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtLoginExistUserRecoverPass"
            style="@style/textDescInputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_below="@+id/edtxtLetsStartMail"
            android:textSize="14sp"
            android:text="@string/recover_pass" />


    </LinearLayout>


    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnLoginExistUser"
        style="@style/buttonRoundedBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:text="@string/next"
        app:cornerRadius="@dimen/btn_corner_radius" />

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_header_yg_login"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorAccent"
                    android:visibility="gone"
                    android:padding="31dp"
                    app:srcCompat="@drawable/ic_logo_header" />


                <LinearLayout
                    android:id="@+id/lyt_img_user"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:visibility="visible"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgLoginExistProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
                </LinearLayout>

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/textNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    app:tipo="Text" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txt_set_credentials"
                    style="@style/generic_text_style_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="26dp"
                    android:text="@string/set_credentials_login_2"
                    android:textAlignment="center" />





                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/correo_electronico"
                    android:maxLines="1"
                    android:textColorHint="@color/texthint"
                    android:visibility="gone"
                    app:counterEnabled="true"
                    app:counterMaxLength="1"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleTint="@color/colorAccent">

                    <EditText
                        android:id="@+id/editUserName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/grayColor"
                        android:textColorHint="@color/texthint"
                        android:theme="@style/NewEdittextwallet" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_password"
                    android:layout_width="276dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_escribe_tu_pass"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textColorHint="@color/texthint"
                    android:theme="@style/TextLabel"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/editUserPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionDone"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:paddingLeft="15dp"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/texthint"
                        android:theme="@style/NewEdittextwallet" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/gray_text_wallet_3"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="center"
                    >
                    <include
                        layout="@layout/asignar_pin_layout_login"
                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_passwordnew"
                        android:layout_width="276dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/inputtext_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/txt_escribe_tu_pass"
                        android:visibility="visible"
                        android:maxLines="1"
                        android:textColorHint="@color/texthint"
                        android:theme="@style/TextLabel"
                        app:passwordToggleTint="@color/colorAccent"
                        tools:ignore="UnusedAttribute">

                        <EditText
                            android:id="@+id/editUserPasswordnew"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginBottom="9dp"
                            android:background="@android:color/transparent"
                            android:imeOptions="actionDone"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:paddingLeft="15dp"
                            android:password="true"
                            android:singleLine="true"
                            android:textColor="@color/texthint"
                            android:theme="@style/NewEdittextwallet" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/llay_eye_pass"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/inputtext_normal"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/eye_img"
                            android:src="@drawable/icon_eye_pass"
                            />


                    </LinearLayout>

                </LinearLayout>



                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtLoginOperadorOtroUsuario"
                    style="@style/textDescInputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/other_user"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:visibility="gone" />


                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtLoginExistUserRecoverPass"
                    style="@style/textDescInputs"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/recover_pass"
                    android:textAlignment="center" />
                <EditText
                    android:id="@+id/asignar_edittext"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:visibility="visible"
                    android:inputType="number"
                    android:maxLength="6" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">




        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btnLoginExistUser"
            style="@style/buttonSquareRoundedBluenewRegister"
            android:background="@drawable/button_rounded_gray"
            android:gravity="center"
            android:text="@string/nextButton" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtVersionApp"
            style="@style/generic_text_style_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
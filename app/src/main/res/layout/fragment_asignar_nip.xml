<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_lets_start"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
tools:context=".ui._controllers.AccountActivity">
<com.pagatodo.yaganaste.utils.customviews.StyleTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:textSize="@dimen/size_text_style_2_value"
    android:textColor="@color/colorAccent"
    android:layout_marginTop="27dp"
    android:text="@string/titulo_nip"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/titulo_datos_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/sub_titulo_nip_personal"
            android:textAlignment="center"
            android:textColor="@color/adadad"
            android:textSize="14sp"
            app:tipo="Text" />
        <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
            android:id="@+id/borderLayout"
            style="@style/BorderTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/personalInfoTitle">

            <LinearLayout
                style="@style/BorderLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_nip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/texthint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/hint_color"
                    android:hint="@string/nip"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="19dp"
                    android:paddingLeft="6dp"
                    android:maxLines="1"
                    android:layout_below="@+id/edit_nombre"
                    android:background="@drawable/inputtext_normal"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/nip"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:inputType="textPassword|number"
                        android:password="true"
                        android:imeOptions="actionNext"
                        android:maxLength="4"
                        android:textColor="@color/texthint"
                        android:background="@android:color/transparent"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_nip_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/texthint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/hint_color"
                    android:hint="@string/nipconfirma"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="6dp"
                    android:maxLines="1"
                    android:layout_below="@+id/edit_nombre"
                    android:background="@drawable/inputtext_normal"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/confim_nip"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:inputType="textPassword|number"
                        android:password="true"
                        android:imeOptions="actionNext"
                        android:maxLength="4"
                        android:textColor="@color/texthint"
                        android:background="@android:color/transparent"/>

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>

        </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</ScrollView>

<LinearLayout
    android:id="@+id/layoutBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_marginTop="@dimen/margin_medium"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_navigation_bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btnNextAsignarPin"
            style="@style/buttonDirecctionBackSmall"
            android:text="@string/backButton"
            android:visibility="gone" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/btns_separation"
            android:layout_height="match_parent" />

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btnNextPersonalInfo"
            style="@style/buttonSquareRoundedBlue"
            android:background="@drawable/button_rounded_blue"
            android:gravity="center"
            android:text="@string/nextButton" />
        </LinearLayout>
    </LinearLayout>
    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
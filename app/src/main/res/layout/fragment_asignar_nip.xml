<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLy">

        <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
            android:id="@+id/borderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="center"
            app:title="Asigna tu PIN">

            <!--  <EditText
                  android:id="@+id/asignar_edittext"
                  android:layout_width="1px"
                  android:layout_height="1px"
                  android:layout_marginTop="20dp"
                  android:ems="10"
                  android:inputType="numberPassword"
                  android:maxLength="4" />-->

            <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                android:id="@+id/asignar_edittext"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <include layout="@layout/asignar_pin_layout" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtMessageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asignar_control_layout"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                android:text="@string/longitud_nip"
                android:visibility="visible" />

            <!--     <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="80">

                     <ImageView
                         android:id="@+id/imageViewValidation"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:layout_centerInParent="true" />
                 </RelativeLayout>-->

        </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

            </LinearLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextAsignarPin"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/height_btns"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/next"
                android:elevation="8dp"
                android:background="@drawable/selector_btn_continuar"
                android:textAllCaps="false"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <com.pagatodo.yaganaste.utils.customviews.CustomKeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/relativeAd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@color/colorPrimary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/relativeAd"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:keyBackground="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="visible">

    </LinearLayout>


    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>
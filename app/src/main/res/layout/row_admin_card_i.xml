<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_row_admin_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_card_admin"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@mipmap/main_card_zoom_blue" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="7"
        android:orientation="vertical">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_title_admin_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/blue_text_wallet"
            android:textSize="11sp" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_desc_admin_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gray_text_wallet"
            android:textSize="11sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_status_admin_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@null"
        android:visibility="invisible"
        android:src="@drawable/rdb_not_pressed" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/item_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_item"
        android:src="@mipmap/ic_seguridad"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:visibility="visible"
        android:layout_centerVertical="true"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title"
        android:layout_gravity="center_vertical"
        android:text="@string/navigation_drawer_menu_seguridad"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/generic_text_style_2"
        android:layout_toRightOf="@id/ic_item"
        android:layout_centerVertical="true"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/arrow_canvas_blue"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:id="@+id/raw_item"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:theme="@style/SCBSwitch"
        android:thumb="@drawable/block_card_switch"
        app:track="@drawable/switch_compat_custom_track"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <View
        android:id="@+id/dividerList"
        android:background="@color/grayColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_medium" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtThanksBuy"
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/detalle_movimiento"
                app:tipo="Titulo" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtPaymentMessage1"
                style="@style/textDetailTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/cobraste"
                android:textSize="16sp"
                app:tipo="Descripcion" />

            <com.pagatodo.yaganaste.utils.customviews.MontoTextView
                android:id="@+id/txtMontoCobroCancel"
                style="@style/textDetailTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="70"
                android:textSize="@dimen/monto_cancel_size"
                app:dotBottom="false"
                app:symbolSmaller="true"
                app:tipo="Text" />


            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtPaymentMessage2"
                style="@style/textDetailTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/con_la_tarjeta"
                app:tipo="Descripcion" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:gravity="center"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtReferenciaCobroCancel"
                    style="@style/textDetailTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** **** **** 4565" />

                <ImageView
                    android:id="@+id/imgTypeCard"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/master_icon" />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/txt_concepto"
                    app:tipo="Descripcion" />

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/margin_xsmall"
                    android:layout_height="match_parent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtConceptoCobroCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Consulta MÃ©dica"
                    app:tipo="Descripcion" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/txt_fecha"
                    app:tipo="Descripcion" />

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/margin_xsmall"
                    android:layout_height="match_parent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtFechaCobroCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="19/Mar/17"
                    app:tipo="Descripcion" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/txt_hora"
                    app:tipo="Descripcion" />

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/margin_xsmall"
                    android:layout_height="match_parent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtHoraCobroCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="14:20:12 hrs"
                    app:tipo="Descripcion" />
            </LinearLayout>


            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_regular" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtQuestionEmail"
                style="@style/textTitleDetailTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_cobro_confirmation"
                app:tipo="Descripcion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_elements"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnVolver"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_btns"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_regular"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_regular"
                    android:layout_weight="35"
                    android:background="@drawable/boton_regresar_canvas"
                    android:gravity="center"
                    android:text="@string/volver"
                    android:textAllCaps="false"
                    android:textSize="@dimen/generic_button_normal_text_size"
                    android:visibility="visible" />


                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnCancelCobro"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_btns"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_regular"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_weight="65"
                    android:background="@drawable/button_rounded_transparent"
                    android:gravity="center"
                    android:text="@string/cancelar_operacion"
                    android:textAllCaps="false"
                    android:textSize="@dimen/generic_button_normal_text_size"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
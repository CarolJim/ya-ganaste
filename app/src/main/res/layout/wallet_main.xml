<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgraund_wallet"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressGIF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wallet_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/colorAccent" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_wallet"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_gravity="top"
                android:background="@android:color/transparent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingEnd="@dimen/card_padding"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:paddingStart="@dimen/card_padding" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71.5dp"
            android:layout_marginTop="17.5dp">

            <RelativeLayout
                android:id="@+id/titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <com.pagatodo.yaganaste.utils.customviews.MontoTextView
                    android:id="@+id/txt_monto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:visibility="visible"
                    app:dotBottom="false"
                    app:symbolSmaller="true" />

            </RelativeLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/tipo_saldo"
                style="@style/generic_text_style_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titles"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="@string/saldo_disponible"
                android:textColor="@color/text_item_color" />

            <ImageView
                android:id="@+id/img_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/titles"
                android:layout_toRightOf="@id/titles"
                android:src="@drawable/ic_reload"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/downloading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/titles"
                android:layout_toRightOf="@id/titles"
                android:src="@drawable/avd_downloading_begin"
                android:visibility="gone"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="12.5dp"
            android:gravity="center"
            android:orientation="horizontal" />


        <com.pagatodo.yaganaste.ui_wallet.views.GridRecyclerView
            android:id="@+id/rcv_elements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_wallet"
            android:layout_marginRight="@dimen/margin_wallet"
            android:layout_marginTop="8dp"
            android:layoutAnimation="@anim/layout_animation"
            android:visibility="visible" />


    </LinearLayout>

</LinearLayout>

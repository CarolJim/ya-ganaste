<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressGIF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryAlpha"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wallet_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_wallet"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="top"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="@dimen/card_padding"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding"
            android:background="@android:color/transparent"/>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="15dp"/>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/tipo_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/generic_text_style_5"
            android:layout_gravity="center_horizontal"
            android:text="@string/saldo_disponible"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" />


        <com.pagatodo.yaganaste.ui_wallet.views.GridRecyclerView
            android:id="@+id/rcv_elements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="@dimen/margin_wallet"
            android:layout_marginRight="@dimen/margin_wallet"
            android:layoutAnimation="@anim/layout_anim_up">
        </com.pagatodo.yaganaste.ui_wallet.views.GridRecyclerView>


    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressGIF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryAlpha"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wallet_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_wallet"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="@dimen/card_padding"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAccent"/>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/tipo_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/generic_text_style_4"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/grayColor"
            android:text="@string/saldo_disponible"/>

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:orientation="horizontal" />


        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/opciones"
            android:layout_marginLeft="@dimen/margin_wallet"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/margin_wallet"
            android:layout_marginRight="@dimen/margin_wallet"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_elements"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/margin_wallet"
            android:layout_marginRight="@dimen/margin_wallet">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor"/>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">


    <ScrollView
        android:id="@+id/scrollViewTarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutScrollCard"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/layoutContent"
                style="@style/BorderTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:title="@string/bloquear_tu_tarjeta">

                <LinearLayout
                    style="@style/BorderLayoutContentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cardBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_card_zoom_blue" />

                    <ImageView
                        android:id="@+id/cardGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_card_zoom_gray"
                        android:visibility="gone" />

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/txtMessageCard"
                        style="@style/generic_text_style_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:gravity="center"
                        android:text="@string/ingresa_pass_block" />




                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/asignar_edittext"
                        android:layout_width="1px"
                        android:layout_height="1px"
                        android:layout_marginTop="3dp"
                        android:inputType="numberPassword" />
                    <include layout="@layout/login_fragment_passwordedittext_custom"
                        android:visibility="gone"
                        android:id="@+id/customkeyboard"
                        />



                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editUserPassword"
                        style="@style/GenericInputTextForms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        app:formato="password"
                        app:hintText="@string/txt_escribe_tu_pass"
                        app:isTextEnabled="true" />

                </LinearLayout>

            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="4"

                android:clickable="true"
                android:inputType="textPassword"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.CustomKeyboardView
                    android:id="@+id/keyboard_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_above="@+id/relativeAd"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:keyBackground="@drawable/material_key_drawable"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                </LinearLayout>

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnLoginExistUser"
                    style="@style/buttonSquareRoundedBlue"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/btn_navigation_bottom"
                    android:gravity="center"
                    android:text="@string/txt_iniciar_sesion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/layoutContent"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:layout_weight="4"
                android:visibility="gone"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <com.pagatodo.yaganaste.utils.customviews.StyleButton

                    style="@style/buttonDirecctionNext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btns"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rectangle_blue_selector"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textSize="@dimen/generic_button_normal_text_size"
                    android:visibility="gone" />

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    style="@style/buttonSquareRoundedBlue"
                    android:gravity="center"
                    android:text="@string/txt_iniciar_sesion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
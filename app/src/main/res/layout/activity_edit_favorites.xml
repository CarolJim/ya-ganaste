<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui._controllers.manager.EditFavoritesActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/layoutBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/editarFavorites"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_text_style_2_value"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Area de foto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.pagatodo.yaganaste.utils.customviews.UploadCircleDocumentView
                        android:id="@+id/add_favorites_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Referencia oculta para vallidar la foto-->
                <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                    android:id="@+id/add_favorites_foto_et"
                    style="@style/FragmentElementWithValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:formato="text"
                    app:hintText="@string/addFavoritesReferencia"
                    app:isSingleLine="true"
                    app:maxLength="16" />

                <!-- Etiqueta de agregar foto-->
                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_favorites_foto_title"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/addFoto"
                    android:textColor="@color/colorAccent"
                    android:textSize="9sp"
                    android:visibility="visible" />

                <!-- Elementos SIEMPRE VISIBLESS -->
                <!-- Elemento para mostrar el nombre del favorito -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_num_telefono2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/favorte_name"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:textColorHint="@color/texthint"
                    android:theme="@style/TextLabel"
                    app:passwordToggleTint="@color/hint_color"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/add_favorites_alias"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:digits="@string/input_alphanumeric_space_reference"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:longClickable="false"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@color/texthint_edittext"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <!-- Contiene la lista de servicios a mostrar, solo se muestra actual y la lista
                                 esta deshabilitada -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_lyt_list_serv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/details_bank"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColorHint="@color/texthint"
                    android:theme="@style/TextLabel"
                    app:passwordToggleTint="@color/hint_color"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/add_favorites_list_serv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/texthint"
                        android:windowSoftInputMode="stateHidden" />

                </android.support.design.widget.TextInputLayout>


                <!-- SIN Veirifcar utilidad. Borrar de ser necesario despues Tipo de Servicio -->
                <LinearLayout
                    android:id="@+id/add_favorites_linear_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/add_favorites_tipo"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:formato="text"
                        app:hintText="Tipo Servicio"
                        app:isSingleLine="true"
                        app:maxLength="50" />


                </LinearLayout>

                <!-- Es el comodin que usamos para verifiar que el campo de referencia este operacional.
                 Contendra siempre los datos de refertencia que enviamos al servicio.
                 NUNCA ES VISIBLE-->
                <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                    android:id="@+id/add_favorites_referencia"
                    style="@style/FragmentElementWithValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:formato="text"
                    app:hintText="Referencia al serviciio"
                    app:isSingleLine="true"
                    app:maxLength="50" />


                <!-- Area de referencias especiales -->
                <!-- Numero telefonico. Para Recargas  -->
                <LinearLayout
                    android:id="@+id/add_favorites_tae_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:hint="@string/numero_telefono"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blue_text_wallet"
                        android:theme="@style/TextLabel"
                        app:passwordToggleTint="@color/hint_color"
                        tools:ignore="UnusedAttribute">

                        <EditText
                            android:id="@+id/recargaNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="9dp"
                            android:background="@android:color/transparent"
                            android:digits="@string/input_alphanumeric_reference"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:longClickable="false"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/texthint_edittext"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:id="@+id/layoutImageContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/imgMakePaymentContact"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icono_agenda" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Numero Referencia. Para PDS  -->
                <LinearLayout
                    android:id="@+id/add_favorites_serv_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:hint="@string/txt_referencia_servicio"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blue_text_wallet"
                        android:theme="@style/TextLabel"
                        app:passwordToggleTint="@color/hint_color"
                        tools:ignore="UnusedAttribute">

                        <EditText
                            android:id="@+id/referenceNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="9dp"
                            android:background="@android:color/transparent"
                            android:digits="@string/input_alphanumeric_reference"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:longClickable="false"
                            android:maxLength="39"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/texthint_edittext"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:id="@+id/layoutImageReference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/imgMakePaymentRef"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icono_camara_servicios" />
                    </RelativeLayout>
                </LinearLayout>

                <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                    android:id="@+id/add_favorites_spinner_et"
                    style="@style/FragmentElementWithValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:formato="text"
                    app:hintText="@string/addFavoritesReferencia"
                    app:isSingleLine="true"
                    app:maxLength="16" />

                <!-- Spinner que contiene las elecciones de Telefono, debito o clabe -->
                <LinearLayout
                    android:id="@+id/tipoEnvio_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/tipoEnvio"
                        style="@style/CustomSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:backgroundTint="@color/transparent" />
                </LinearLayout>

                <!--  <LinearLayout
                      android:id="@+id/layout_cardNumber123"
                      style="@style/generic_text_style_2"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@drawable/inputtext_normal"
                      android:orientation="horizontal"
                      android:visibility="visible">

                      <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                          android:id="@+id/cardNumber1234"
                          style="@style/GenericStyleEditText"
                          android:layout_gravity="center_vertical"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:hint="@string/hint_card_number"
                          android:inputType="number"
                          android:longClickable="false"
                          android:maxLength="50" />


                      <RelativeLayout
                          android:id="@+id/layoutImageContact2"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="3">

                          <ImageView
                              android:id="@+id/imgMakePaymentContact2"
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:layout_centerInParent="true"
                              android:foregroundGravity="right"
                              android:src="@drawable/icono_agenda" />
                      </RelativeLayout>
                  </LinearLayout>-->
                <!-- Base para el nuevo estillo de editar envios-->
                <LinearLayout
                    android:id="@+id/layout_cardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_card_number"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blue_text_wallet"
                        android:theme="@style/TextLabel"
                        app:passwordToggleTint="@color/hint_color"
                        tools:ignore="UnusedAttribute">

                        <EditText
                            android:id="@+id/cardNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="9dp"
                            android:background="@android:color/transparent"
                            android:digits="@string/input_alphanumeric_reference"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:longClickable="false"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/texthint_edittext"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:id="@+id/layoutImageContact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/imgMakePaymentContact2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icono_agenda" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Area de errores a liminar -->
            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/add_favorites_foto_error"
                style="@style/generic_text_style_2"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/add_favorites_alias_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/tipo_envio_error"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/add_favorites_referencia_error"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/add_favorites_list_serv_error"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                android:id="@+id/add_favorites_tipo_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/btn_navigation_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnCloseAddFavorites"
                style="@style/buttonDirecctionBackSmall"
                android:gravity="center"
                android:text="@string/backButton"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnSendAddFavoritos"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/width_btns_big"
                android:layout_height="@dimen/height_btns"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_blue"
                android:text="@string/title_guardar"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/size_text_style_2_value"
                app:cornerRadius="@dimen/btn_corner_radius"
                app:intercepterOnclick="true" />
        </LinearLayout>

    </LinearLayout>

    <!--<com.pagatodo.yaganaste.utils.customviews.ProgressLayout-->
    <!--android:id="@id/progressLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:visibility="gone" />-->
</LinearLayout>

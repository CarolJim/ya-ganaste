<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_text_wallet"
    android:orientation="vertical"
    android:minWidth="350dp"
    android:maxHeight="550dp">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtLoginOperadorOtroUsuario"
        style="@style/textSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Selecciona tu lector:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <ListView
        android:id="@+id/rcv_founded_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:divider="@color/colorAccent"
        android:dividerHeight="1dp" />

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/bnt_cancel"
        style="@style/buttonSquareRoundedBlue"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginBottom="@dimen/margin_error"
        android:layout_marginTop="@dimen/margin_error"
        android:background="@drawable/button_rounded_blue"
        android:text="@string/cancel" />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui_wallet.fragments.NewPaymentFragment">


    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTituloDialog"
            android:text="Mostrar favoritos" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/btnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SwitchCompatStyle"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="@string/btn_recharge_txt"
                        android:textColor="@color/colorTituloDialog" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRVRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <GridView
                        android:id="@+id/gvRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12.5dp"
                        android:gravity="center"
                        android:numColumns="4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="15dp" />

                    <TextView
                        android:id="@+id/tvErrorRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="No se encontraron resultados" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="@string/btn_payment_txt"
                        android:textColor="@color/colorTituloDialog" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRVPagos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <GridView
                        android:id="@+id/gvServicios"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12.5dp"
                        android:gravity="center"
                        android:numColumns="4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="15dp" />

                    <TextView
                        android:id="@+id/tvErrorServicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="No se encontraron resultados" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

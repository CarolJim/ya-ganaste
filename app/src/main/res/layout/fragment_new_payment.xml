<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui_wallet.fragments.NewPaymentFragment">

    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="13.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTituloDialog"
            android:text="Mostrar favoritos" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/btnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SwitchCompatStyle"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="0dp"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="1dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="@string/btn_recharge_txt"
                            android:textColor="@color/colorTituloDialog" />

                        <TextView
                            android:id="@+id/fragment_newpayment_editar_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.5dp"
                            android:layout_marginRight="8.5dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="left"
                            android:layout_alignParentRight="true"
                            android:textSize="9sp"
                            android:text="Editar"
                            android:textColor="@color/texthint" />


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRVRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <GridView
                        android:id="@+id/gvRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12.5dp"
                        android:gravity="center"
                        android:numColumns="4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="15dp" />

                    <TextView
                        android:id="@+id/tvErrorRecargas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="No se encontraron resultados" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                app:cardBackgroundColor="@color/whiteColor"
                app:cardCornerRadius="1dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="@string/btn_payment_txt"
                            android:textColor="@color/colorTituloDialog" />

                        <TextView
                            android:id="@+id/newpayment_pagar_editar_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.5dp"
                            android:layout_marginRight="8.5dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="left"
                            android:layout_alignParentRight="true"
                            android:textSize="9sp"
                            android:text="Editar"
                            android:textColor="@color/texthint" />


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRVPagos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <GridView
                        android:id="@+id/gvServicios"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12.5dp"
                        android:gravity="center"
                        android:numColumns="4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="15dp" />

                    <TextView
                        android:id="@+id/tvErrorServicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.5dp"
                        android:gravity="center"
                        android:text="No se encontraron resultados" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

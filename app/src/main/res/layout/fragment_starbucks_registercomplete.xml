<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context=".ui._controllers.PaymentsProcessingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txt_subtitul"
                    style="@style/subtitulo_starbucks_acent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/registrarme"
                    android:textColor="@color/colorAccent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colortexto"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="Confirma tus datos para crear tu cuenta\nMy Starbucks Reward"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="visible">




                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edit_nombre"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/correo_electronico"
                    android:maxLines="1"
                    android:textColorHint="@color/texthint"
                    app:counterEnabled="true"
                    app:counterMaxLength="1"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleTint="@color/hint_color"
                    tools:ignore="UnusedAttribute"

                    >

                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/grayColor"
                        android:theme="@style/NewEdittextwallet" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_password"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edit_nombre"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/contrasena"
                    android:maxLines="1"
                    android:textColorHint="@color/texthint"
                    app:counterEnabled="true"
                    app:counterMaxLength="1"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent"
                    tools:ignore="UnusedAttribute"



                    >

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:cursorVisible="false"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"

                        android:paddingLeft="15dp"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/grayColor"
                        android:theme="@style/NewEdittextwallet" />

                </android.support.design.widget.TextInputLayout>


                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4.5dp"
                    android:text="Tu contraseña debe tener al menos 8 caracteres, una\nmayúscula, una minuscula y un número"
                    android:textAlignment="center"
                    android:textColor="@color/colortexto"
                    android:textSize="11sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_passwordconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edit_nombre"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/inputtext_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/contrasena_confirma"
                    android:maxLines="1"
                    android:textColorHint="@color/texthint"

                    app:counterEnabled="true"
                    app:counterMaxLength="1"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent"
                    tools:ignore="UnusedAttribute">

                    <EditText
                        android:id="@+id/edit_passwordconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:background="@android:color/transparent"
                        android:cursorVisible="false"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/grayColor"
                        android:theme="@style/NewEdittextwallet" />

                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="11.5dp"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight=".5"
                        android:gravity="start"
                        android:text="@string/suscribirse"
                        android:textColor="@color/colorAccent"
                        android:textSize="11sp" />

                    <RadioGroup
                        android:id="@+id/radioHasCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                            android:id="@+id/radioBtnNo"
                            style="@style/RadioButtonMenu"
                            android:layout_width="45dp"
                            android:layout_height="25dp"
                            android:text="No" />


                        <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                            android:id="@+id/radioBtnYes"
                            style="@style/RadioButtonMenu"
                            android:layout_width="45dp"
                            android:layout_height="25dp"
                            android:checked="false"
                            android:text="Si" />
                    </RadioGroup>
                </LinearLayout>

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="-17dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colortexto"
                    android:textSize="12dp"
                    android:text="Deseo recibir noticias y promociones"
                    />

            </LinearLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtbottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12.5dp"
                android:text="@string/terminos_aviso_starbucks"
                android:textAlignment="center"
                android:textColor="@color/colortexto"
                android:textSize="11sp" />
            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtbottom2"
                android:textSize="11sp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colortexto"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="@string/aviso_de_privacidad_starbucks"
                />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutBottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleButton
                        android:id="@+id/btnBackDatosUsuario"
                        style="@style/buttonDirecctionBackSmall"
                        android:gravity="center"
                        android:text="@string/backButton"
                        android:visibility="gone" />

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/btns_separation"
                        android:layout_height="match_parent" />

                    <com.pagatodo.yaganaste.utils.customviews.StyleButton
                        android:id="@+id/btnNextStarbucks"
                        style="@style/buttonSquareRoundedBlueNewWallet"
                        android:background="@drawable/button_rounded_blue"
                        android:gravity="center"
                        android:text="@string/registrarme" />
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
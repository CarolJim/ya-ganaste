<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llypassConfirm"
    android:layout_width="276dp"
    android:layout_height="53dp"
    android:layout_marginLeft="11dp"
    android:background="@drawable/inputtext_normal"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titlepassConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/hint_password_confirm"
            android:textColor="@color/blue_text_wallet"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/asignar_control_layoutConfirm"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/asignar_tv1Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10" />

        <LinearLayout
            android:id="@+id/div1"
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asignar_tv2Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/div2"
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asignar_tv3Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/div3"
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asignar_tv4Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/div4"
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asignar_tv5Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/div5"
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asignar_tv6Confirm"
            style="@style/formatPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>
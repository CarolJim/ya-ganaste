<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".modules.onboarding.fragments.StartFragment">


    <ImageView
        android:id="@+id/onBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:tint="@color/blue_text_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onBack" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/title_welcome"
        android:textColor="@color/blue_text_wallet"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <LinearLayout
        android:layout_marginTop="31dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btn_init_session"
            android:layout_width="219dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_no"
            android:text="@string/set_credentials_login"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_wallet"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_height="0dp"
        android:gravity="center_horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/create_account"
            android:layout_width="219dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_yes"
            android:text="@string/crear_cuenta"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:textSize="16sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
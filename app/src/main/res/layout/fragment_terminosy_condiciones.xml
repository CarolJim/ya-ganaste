<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pagatodo.yaganaste.ui.preferuser.ListaOpcionesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/textView2"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/termin_condiciones" />

        </LinearLayout>

        <!-- Contenedor que tiene todas las opciones terminos y condiciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteColor" />

            <LinearLayout
                android:id="@+id/fragment_terminos_cuenta_ya_ganaste_Terminos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    style="@style/generic_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="@string/cuentaterminos" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/arrow_canvas_blue" />
            </LinearLayout>

            <View
                android:id="@+id/fragment_terminos_lcredito_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteColor"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fragment_terminos_lcredito_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:visibility="gone">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    style="@style/generic_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="@string/aviso_privacidad_linea_credito" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/arrow_canvas_blue" />
            </LinearLayout>

            <View
                android:id="@+id/lineancredito"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteColor"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/fragment_contrato_terminos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:visibility="visible">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/styleTextView5"
                    style="@style/generic_text_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="@string/contratosterminos" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/arrow_canvas_blue" />
            </LinearLayout>

            <View
                android:id="@+id/lineacontrato"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteColor"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <ImageView
        android:id="@+id/img_header_recover_pass"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/colorAccent"
        android:paddingBottom="31dp"
        app:srcCompat="@drawable/ic_recover_pass_white" />

    <ImageView
        android:id="@+id/img_recover_pass_blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_recover_pass_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtTitleRecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/recupera_contrasenia_title"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_text_style_2_value" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtHeaderRecovery"
            style="@style/textDescInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/enviaremos_enlace_restablecer"
            android:textSize="@dimen/size_text_style_3_value" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/inputtext_normal"
            android:gravity="center_vertical"
            android:hint="@string/correo_electronico"
            android:maxLines="1"
            android:textColorHint="@color/texthint"
            android:theme="@style/TextLabel"
            app:passwordToggleTint="@color/hint_color"
            tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/edtCorreoRegistrado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme ="@style/NewEdittextwallet"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:paddingLeft="15dp"
            android:textColor="@color/texthint"
            android:textColorHint="@color/texthint" />

        </android.support.design.widget.TextInputLayout>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/tvCorreoRegistrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="dantestark@gmail.com"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBackRecuperar"
                style="@style/buttonDirecctionBackSmall"
                android:text="@string/backButton"
                android:visibility="gone" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextRecuperar"
                style="@style/buttonSquareRoundedBlue"
                android:gravity="center"
                android:text="@string/send_email" />
        </LinearLayout>
    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>
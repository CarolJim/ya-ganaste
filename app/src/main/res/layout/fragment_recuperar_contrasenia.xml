<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient_bottom"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLy">

    <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
        android:id="@+id/borderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:gravity="center"
        app:title="@string/recupera_contrasenia_title">


        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            style="@style/FragmentElementTop"
            android:id="@+id/txtHeaderRecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_big"
            android:text="@string/ingresa_correo_registrado"/>

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            style="@style/FragmentElementBottom"
                android:id="@+id/edtCorreoRegistrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_elements"
                android:layout_below="@+id/txtHeaderRecovery"
                android:layout_marginBottom="@dimen/margin_regular"
                app:formato="email"
                app:isSingleLine="true" />

    </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_below="@+id/borderLayout"
            android:layout_marginBottom="@dimen/margin_small"/>

    <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnBackRecuperar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btns"
                    android:layout_weight="1.4"
                    android:layout_centerInParent="true"
                    android:text="@string/backButton"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/selector_btn_back"
                    android:textAllCaps="false" />

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnNextRecuperar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btns"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/nextButton"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/selector_btn_continuar"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


</RelativeLayout>
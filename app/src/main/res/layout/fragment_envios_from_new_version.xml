<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        style="@style/H1Azul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="EnvÃ­a dinero"
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/whiteColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:id="@+id/txtFavoritos"
                            style="@style/H3Azul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Favoritos" />

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:id="@+id/txtEditarFavoritor"
                            style="@style/H4Gris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.5dp"
                            android:text="Editar" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:scrollbars="none" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/containerEnviosForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/tipoEnvio"
                    style="@style/CustomSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@null"
                    android:backgroundTint="@color/transparent" />

                <LinearLayout
                    android:id="@+id/layout_cardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@drawable/rounded_border_edittext"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/cardNumber"
                        style="@style/GenericStyleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:hint="@string/hint_card_number"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="19" />

                    <RelativeLayout
                        android:id="@+id/layoutImageContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgMakePaymentContact"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icono_agenda" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutScanQr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgMakePaymentRef"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:src="@drawable/icono_camara_servicios" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutScanCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgScanCard"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:src="@drawable/icono_camara_servicios" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/add_favorites_list_serv"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:formato="text"
                        app:hintText="Servicio"
                        app:imageIsGone="false"
                        app:isTextEnabled="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@drawable/rounded_border_edittext"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/receiverName"
                        style="@style/GenericStyleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/input_letters"
                        android:hint="@string/hint_name_destinatario"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLines="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/envio_from_slide_view_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/envio_from_slide_view_l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="@dimen/space_between_elements"
                        android:background="@drawable/rounded_border_edittext"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                            android:id="@+id/concept"
                            style="@style/GenericStyleEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="@string/input_letters_concepto"
                            android:hint="@string/hint_concepto"
                            android:inputType="textCapWords|textNoSuggestions"
                            android:maxLength="40" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_envios_referencia_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="@dimen/space_between_elements"
                        android:background="@drawable/rounded_border_edittext"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                            android:id="@+id/numberReference"
                            style="@style/GenericStyleEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_referencia_numerica"
                            android:inputType="number"
                            android:maxLength="6" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/envio_from_slide_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/whiteColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar Referencias (Opcional)"
                            android:textColor="@color/grayColor" />

                        <ImageView
                            android:id="@+id/iv_triangule_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/triangule_blue_down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnenviar"
        style="@style/buttonSquareRoundedBlue"
        android:layout_marginBottom="32dp"
        android:text="Continuar"
        android:visibility="visible" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            style="@style/generic_text_style_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Monto_a_enviar" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/montotosend"
            style="@style/textTitleDetailTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$11,350" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_image_docs"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtFavoritos"
                    style="@style/textTitleDetailTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Favoritos"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerEnviosForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/FragmentElementForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/add_favorites_list_serv"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:formato="text"
                        app:hintText="Servicio"
                        app:imageIsGone="false"
                        app:isTextEnabled="false" />
                </LinearLayout>


                <Spinner
                    android:id="@+id/tipoEnvio"
                    style="@style/CustomSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_elements"
                    android:layout_marginRight="@dimen/margin_elements"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@null"
                    android:backgroundTint="@color/transparent"
                    />

                <LinearLayout
                    android:id="@+id/layout_cardNumber"
                    style="@style/FragmentElementForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@drawable/rounded_border_edittext"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/cardNumber"
                        style="@style/GenericStyleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:hint="@string/card_number_hint"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="19" />

                    <RelativeLayout
                        android:id="@+id/layoutImageContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgMakePaymentContact"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icono_agenda" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/FragmentElementForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_elements"
                    android:background="@drawable/rounded_border_edittext"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/receiverName"
                        style="@style/GenericStyleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/input_letters"
                        android:hint="@string/hint_name_destinatario"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLines="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/envio_from_slide_view_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/envio_from_slide_view_l1"
                        style="@style/FragmentElementForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_between_elements"
                        android:background="@drawable/rounded_border_edittext"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                            android:id="@+id/concept"
                            style="@style/GenericStyleEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="@string/input_letters_concepto"
                            android:hint="@string/hint_concepto"
                            android:inputType="textCapWords|textNoSuggestions"
                            android:maxLength="40" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_envios_referencia_layout"
                        style="@style/FragmentElementForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_between_elements"
                        android:background="@drawable/rounded_border_edittext"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                            android:id="@+id/numberReference"
                            style="@style/GenericStyleEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_referencia_numerica"
                            android:inputType="number"
                            android:maxLength="6" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/envio_from_slide_view"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/whiteColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar Referencias (Opcional)"
                            android:textColor="@color/grayColor" />

                        <ImageView android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/iv_triangule_blue"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/triangule_blue_down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/containerSlideButon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/btn_navigation_bottom"
                android:layout_marginLeft="@dimen/seekbar_margin"
                android:layout_marginRight="@dimen/seekbar_margin">

                <com.pagatodo.yaganaste.utils.customviews.CustomSeekBarEnviar
                    android:id="@+id/myseek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seek_background"
                    android:clickable="false"
                    android:max="100"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/thumb_size"
                    android:thumbOffset="15dp"
                    android:visibility="gone"
                    app:text="@string/btn_send" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnenviar"
        android:layout_marginBottom="25dp"
        style="@style/buttonSquareRoundedBlue"
        android:text="Enviar"
        android:visibility="visible" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FragmentElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_big">

    <LinearLayout
        android:id="@+id/containerRecargaForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edittext"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/recargaNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="20"
                android:background="@null"
                android:backgroundTint="@color/transparent"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="10"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/layoutImageContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80">

                <ImageView
                    android:id="@+id/imgMakePaymentContact"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/icono_agenda" />
            </RelativeLayout>

        </LinearLayout>

        <!--com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/recargaNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formato="celphone"
            app:hintText="TelÃ©fono (10 Digitos)"
            app:isSingleLine="true"
            app:maxLength="10" /-->

        <Spinner
            android:id="@+id/sp_montoRecarga"
            style="@style/CustomSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_between_elements"
            android:backgroundTint="@color/transparent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/containerSlideButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerRecargaForm"
        android:layout_marginLeft="@dimen/margin_doble"
        android:layout_marginRight="@dimen/margin_doble"
        android:layout_marginTop="@dimen/margin_doble">

        <SeekBar
            android:id="@+id/myseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_doble"
            android:background="@drawable/seek_background"
            android:clickable="false"
            android:max="100"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/thumb_size"
            android:thumbOffset="15dp" />
    </RelativeLayout>
</RelativeLayout>
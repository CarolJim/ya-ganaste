<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/styleTextView2"
        style="@style/generic_text_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="@string/tu_codigo"
        android:textColor="@color/colorAccent" />

    <FrameLayout
        android:layout_width="212dp"
        android:layout_height="212dp">

        <com.pagatodo.yaganaste.utils.customviews.StatusViewCupo
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:bgColor="@color/bg_card_confirmation"
            app:firstColor="@color/colorAccent"
            app:percent="100"
            app:strokeWidth="15dp" />


        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            app:tipo="Text"
            tools:text="1234 4566" />

    </FrameLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/caduca_en_2"
        android:textColor="@color/textColorAlternative"
        android:textSize="@dimen/size_text_style_3_value"
        app:tipo="Text" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txt_time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_text_style_1_value"
        app:tipo="Text"
        tools:text="@string/caduca_en" />

</LinearLayout>
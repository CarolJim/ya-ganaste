<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/toolbar_alternative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height_medium"
        android:background="@drawable/background_toolbar" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:button="@color/transparent"
        android:gravity="center"
        android:text="@string/title_configure_dongle"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_2_value"
        app:tipo="Text" />

    <ImageView
        android:id="@+id/imgYaGanasteCard"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/title_fragment"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lector_front" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgYaGanasteCard"
        android:layout_marginTop="20dp"
        android:text="Abarrotes"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        app:tipo="Text" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtSerialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCompanyName"
        android:text="Abarrotes"
        android:textAlignment="center"
        android:textColor="@color/gray_text_wallet"
        android:textSize="12sp"
        app:tipo="Text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSerialNumber"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/decoration_item_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="@string/dongle_battery"
                android:textColor="@color/edittext"
                android:textSize="@dimen/size_text_style_3_value" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">


                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtNumberBattery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/size_text_style_3_value"
                    tools:text="1%" />


                <ImageView
                    android:id="@+id/iconBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/decoration_item_color" />

        <LinearLayout
            android:id="@+id/lyt_config_repayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="21dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="21dp">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="@string/time_repayment"
                android:textColor="@color/edittext"
                android:textSize="@dimen/size_text_style_3_value" />


            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/arrow_canvas_blue" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/decoration_item_color" />

        <LinearLayout
            android:id="@+id/lyt_config_dongle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="21dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="21dp">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="@string/select_dongle"
                android:textColor="@color/edittext"
                android:textSize="@dimen/size_text_style_3_value" />


            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/arrow_canvas_blue" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/decoration_item_color" />
    </LinearLayout>

</RelativeLayout>

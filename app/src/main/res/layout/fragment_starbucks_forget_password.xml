<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context=".ui._controllers.PaymentsProcessingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_header_recover_pass"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@color/colorAccent"
            android:paddingBottom="31dp"
            app:srcCompat="@drawable/ic_recover_pass_white" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtTitleRecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/recupera_tu_contrase_a"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_text_style_2_value" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtHeaderRecovery"
            style="@style/textDescInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="Ingresa el correo electr칩nico que\nregistraste en Starbucks para recuperar tu contrase침a"
            android:textSize="@dimen/size_text_style_3_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/block_iniciar_sesion"
        android:visibility="visible"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_correo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputtext_normal"
            android:gravity="center_vertical"
            android:hint="@string/txt_mail"
            android:maxLines="1"
            android:textColorHint="@color/texthint"
            app:counterEnabled="true"
            app:counterMaxLength="1"
            app:hintTextAppearance="@style/HintText"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:passwordToggleTint="@color/hint_color"
            tools:ignore="UnusedAttribute">

            <EditText
                android:id="@+id/editcorreo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:theme ="@style/NewEdittextwallet"
                android:textColor="@color/grayColor"
                android:textColorHint="@color/texthint" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtbottomcontrasena"
        style="@style/textDescInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:padding="@dimen/margin_medium"
        android:text="jajajaja se te olvido tu contrase침a ?? "
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.legacy.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextRegistrate"
                style="@style/buttonSquareRoundedBluedd"
                android:layout_marginRight="5dp"
                android:background="@drawable/btnbluewhite"
                android:gravity="center"
                android:text="Registrate"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/generic_button_normal_text_size"
                android:visibility="gone"

                />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextStarbucksPassword"
                style="@style/buttonSquareRoundedBluewallet"
                android:background="@drawable/button_rounded_blue"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Recuperar Contase침a"



                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
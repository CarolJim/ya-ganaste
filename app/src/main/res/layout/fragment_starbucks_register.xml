<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context=".ui._controllers.PaymentsProcessingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintopstarbucks"
        android:orientation="vertical">

        <ImageView
            android:layout_width="119.5dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_starbucks" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_subtitul"
            style="@style/subtitulo_starbucks_acent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:gravity="center"
            android:text="@string/texto_resgister_starbucks"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/block_register"
        android:visibility="visible"
        >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_numero_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputtext_normal"
        android:gravity="center_vertical"
        android:hint="@string/numero_de_tarjeta_starbucks"
        android:maxLines="1"
        android:textColorHint="@color/texthint"
        app:counterEnabled="true"
        app:counterMaxLength="1"
        app:hintTextAppearance="@style/HintText"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:passwordToggleTint="@color/hint_color"
        tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/editnumero_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:theme ="@style/NewEdittextwallet"
            android:textColor="@color/grayColor"
            android:textColorHint="@color/texthint" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_codigo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputtext_normal"
        android:gravity="center_vertical"
        android:hint="@string/codigo_8_digitos"
        android:maxLines="1"
        android:textColorHint="@color/texthint"
        app:passwordToggleEnabled="true"
        app:counterEnabled="true"
        app:passwordToggleTint="@color/hint_color"
        app:counterMaxLength="1"
        app:hintTextAppearance="@style/HintText"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        tools:ignore="UnusedAttribute"

        >

        <EditText
            android:id="@+id/editcodigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:password="true"
            android:singleLine="true"
            android:maxLength="8"
            android:theme ="@style/NewEdittextwallet"
            android:textColor="@color/grayColor"
            android:textColorHint="@color/texthint" />
    </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/block_iniciar_sesion"
    android:visibility="gone"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_correo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputtext_normal"
        android:gravity="center_vertical"
        android:hint="@string/numero_de_tarjeta_starbucks"
        android:maxLines="1"
        android:textColorHint="@color/texthint"
        app:counterEnabled="true"
        app:counterMaxLength="1"
        app:hintTextAppearance="@style/HintText"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:passwordToggleTint="@color/hint_color"
        tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/editcorreo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:theme ="@style/NewEdittextwallet"
            android:textColor="@color/grayColor"
            android:textColorHint="@color/texthint" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputtext_normal"
        android:gravity="center_vertical"
        android:hint="@string/codigo_8_digitos"
        android:maxLines="1"
        android:textColorHint="@color/texthint"
        app:counterEnabled="true"
        app:counterMaxLength="1"
        app:hintTextAppearance="@style/HintText"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:passwordToggleTint="@color/hint_color"
        tools:ignore="UnusedAttribute">

        <EditText
            android:id="@+id/editpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:theme ="@style/NewEdittextwallet"
            android:textColor="@color/grayColor"
            android:textColorHint="@color/texthint" />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtbottom"
        style="@style/textDescInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/margin_medium"
        android:text="@string/ya_tienes_cuenta_inicia_sesi"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBackDatosUsuario"
                style="@style/buttonDirecctionBackSmall"
                android:gravity="center"
                android:text="@string/backButton"
                android:visibility="gone" />

            <androidx.legacy.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextStarbucks"
                style="@style/buttonSquareRoundedBlueNewWallet"
                android:background="@drawable/button_rounded_blue"
                android:gravity="center"
                android:text="@string/registrarme" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
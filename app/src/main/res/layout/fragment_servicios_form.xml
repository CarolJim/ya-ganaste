<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FragmentElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_big">

    <LinearLayout
        android:id="@+id/containerServiciosForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edittext"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/referenceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="20"
                android:background="@null"
                android:backgroundTint="@color/transparent"
                android:hint="@string/txt_referencia_servicio"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="12"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/layoutImageReference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80">

                <ImageView
                    android:id="@+id/imgMakePaymentRef"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/icono_camara_servicios" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_between_elements"
            android:background="@drawable/rounded_border_edittext"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/serviceImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:backgroundTint="@color/transparent"
                android:hint="@string/hint_importe"
                android:inputType="numberDecimal"
                android:longClickable="false"
                android:maxLength="10"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_between_elements"
            android:background="@drawable/rounded_border_edittext"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/serviceConcept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:backgroundTint="@color/transparent"
                android:hint="@string/hint_concepto"
                android:inputType="text"
                android:longClickable="false"
                android:maxLength="40"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/comisionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerServiciosForm"
        android:layout_marginTop="@dimen/margin_doble"
        android:gravity="center"
        android:text="@string/comision_service_payment"
        android:textSize="12sp"
        app:tipo="Descripcion" />


    <RelativeLayout
        android:id="@+id/containerSlideButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comisionText"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/space_between_elements">

        <com.pagatodo.yaganaste.utils.customviews.CustomSeekBar
            android:id="@+id/myseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_doble"
            android:background="@drawable/seek_background"
            android:clickable="false"
            android:max="100"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/thumb_size"
            android:thumbOffset="15dp"
            app:text="Pagar" />
    </RelativeLayout>

</RelativeLayout>
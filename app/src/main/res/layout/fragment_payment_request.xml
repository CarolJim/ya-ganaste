<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui_wallet.fragments.PaymentRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            style="@style/generic_text_style_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solicitar_pago_text" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/request_amount"
            style="@style/textTitleDetailTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyt_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_image_docs"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtFavoritos"
                style="@style/textTitleDetailTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Favoritos"
                android:textSize="12sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_fav_request_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_container"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_background_image_docs"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_payment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/radio_image_pago_payment_tab"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_user"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="@dimen/border_width" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txt_username_payment"
                    style="@style/generic_text_style_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Amaury"
                    android:textColor="@color/colorAccent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txt_balance_payment"
                    style="@style/generic_text_style_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="$11,350.00"
                    android:textColor="@color/grayColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/request_animation" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_add_request_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="17dp">

                <RelativeLayout
                    android:id="@+id/rlt_add_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgPagosServiceToPayRound"
                        android:layout_width="@dimen/radio_image_pago_payment_tab"
                        android:layout_height="@dimen/radio_image_pago_payment_tab"
                        android:layout_centerInParent="true"
                        android:src="@color/color_background_image_docs"
                        app:civ_border_color="@color/grayColor"
                        app:civ_border_width="@dimen/border_width" />

                    <ImageView
                        android:id="@+id/imgItemGalleryPay"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/new_fav_add" />

                </RelativeLayout>

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txt_data"
                    style="@style/generic_text_style_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Agregar"
                    android:textColor="@color/grayColor" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_request_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:clickable="false"
                android:descendantFocusability="afterDescendants"
                android:focusable="false"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btn_continue_payment"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/width_btns_big"
        android:layout_height="@dimen/height_btns"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_rounded_blue"
        android:text="@string/btn_req_payment_txt"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_2_value"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:intercepterOnclick="true" />
</LinearLayout>


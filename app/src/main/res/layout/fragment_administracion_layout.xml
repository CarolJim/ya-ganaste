<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/toolbar_alternative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/bacgraund_tooblar"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_fragment"
        style="@style/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/administracion"/>

    <com.pagatodo.yaganaste.utils.customviews.YaGanasteCard
        android:id="@+id/imgYaGanasteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_fragment"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/list_view_admon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgYaGanasteCard"
        android:layout_marginTop="20dp"/>

</RelativeLayout>

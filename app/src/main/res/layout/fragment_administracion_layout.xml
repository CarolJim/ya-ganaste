<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgraund_wallet"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/toolbar_alternative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/bacgraund_tooblar"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_fragment"
        style="@style/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/administracion"/>

    <com.pagatodo.yaganaste.utils.customviews.YaGanasteCard
        android:id="@+id/imgYaGanasteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_fragment"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/dividerList"
        android:background="@color/decoration_item_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/imgYaGanasteCard"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:id="@+id/content_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dividerList">
    </LinearLayout>

</RelativeLayout>

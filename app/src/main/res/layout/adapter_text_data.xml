<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_enviado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_movements_row_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/text_data_left"
                style="@style/generic_text_style_2.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/datos_deposito_titular" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/text_data_right"
                style="@style/generic_text_style_2.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorAccent"
                android:text="ejemplo"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:background="@color/margin_lines" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
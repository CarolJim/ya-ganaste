<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_enviado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/text_data_left"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/datos_deposito_titular" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/text_data_right"
                style="@style/generic_text_style_3.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ejemplo"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_text_style_2_half_value" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:background="@color/margin_lines" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
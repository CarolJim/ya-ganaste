<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="@string/contrasena_usuario"
            android:textColor="@color/blue_text_wallet"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass1"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:nextFocusForward="@id/textPass2"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/div1"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:orientation="vertical"
            android:visibility="visible">

        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass2"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:nextFocusForward="@id/textPass3"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/div2"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:visibility="visible">

        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass3"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:nextFocusForward="@id/textPass4"
            android:textAlignment="center"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/div3"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:gravity="center"
            android:visibility="visible">

        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass4"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:nextFocusForward="@id/textPass5"
            android:textAlignment="center"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/div4"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:visibility="visible">

        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass5"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:nextFocusForward="@id/textPass6"
            android:textAlignment="center"
            android:textColor="@color/transparent" />

        <LinearLayout
            android:id="@+id/div5"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_space"
            android:visibility="visible">

        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textPass6"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textAlignment="center"
            android:textColor="@color/transparent" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_text_aux_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:visibility="gone" />

</LinearLayout>
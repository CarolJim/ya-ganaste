<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
            android:id="@+id/editTextCustom"
            style="@style/GenericStyleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/custom_validation_edittext_imagelay_width"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageViewValidation"
                android:layout_width="@dimen/custom_validation_edittext_image_width"
                android:layout_height="@dimen/custom_validation_edittext_image_height"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>

    </LinearLayout>

</merge>
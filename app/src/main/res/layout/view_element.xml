<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:padding="5dp"
    android:background="@color/colorPrimaryAlpha"
    android:orientation="vertical"
    android:gravity="center"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/button_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_tab_ya">
        </ImageView>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            style="@style/generic_text_style_4"
            android:id="@+id/text_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
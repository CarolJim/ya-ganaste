<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_rectangle"
    android:gravity="center"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:visibility="visible"
    app:cardBackgroundColor="@color/whiteColor">

    <LinearLayout
        android:id="@+id/view_element"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_item"
            android:layout_marginTop="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/icon_tab_ya">

        </ImageView>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/text_option"
            style="@style/generic_text_style_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Estado Cuenta"
            android:textColor="@color/gray_slate" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_bottom"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.PaymentsProcessingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="90">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txt_paymentTitle"
            style="@style/generic_text_style_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/recharge_success_title" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/textView"
            style="@style/generic_text_style_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/txt_importe"
            android:textSize="16sp"
            app:tipo="Text" />


        <com.pagatodo.yaganaste.utils.customviews.MontoTextView
            android:id="@+id/txt_importe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="00"
            android:textAlignment="center"
            android:textSize="22sp"
            app:dotBottom="false"
            app:symbolSmaller="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layoutComision"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/comisionReferenciaText"
                    style="@style/generic_text_style_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_comision"
                    android:textSize="16sp"
                    app:tipo="Descripcion" />

                <android.support.v4.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <com.pagatodo.yaganaste.utils.customviews.MontoTextView
                    android:id="@+id/txtComision"
                    style="@style/generic_text_style_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="10sp"
                    app:dotBottom="true"
                    app:symbolSmaller="true"
                    app:tipo="Descripcion" />

            </LinearLayout>


            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/titleReferencia"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="@string/txt_phone_b"
                android:textSize="16sp"
                app:tipo="Text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center|top"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtReferencia"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="57 11 22 34"
                android:textSize="16sp"
                app:tipo="Text" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imgLogoPago"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/logo_banco_azteca" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="@string/autorizacion" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtAutorizacion"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="123 45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="@string/txt_fecha" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtFecha"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="21 / Mar / 17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="@string/txt_hora" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtHora"
                style="@style/generic_text_style_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="12:12:12 hrs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFavoritos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical"
            android:weightSum="100">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgPagosFavs"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="30"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/circulo_favorito"
                android:visibility="gone"
                tools:ignore="ContentDescription" />


            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center_horizontal|top"
                android:text="@string/add_favorites"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="2">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/titleMail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="@string/email_send_ticket"
                android:textColor="@color/colorAccent" />

            <RelativeLayout
                android:id="@+id/layoutEditMail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_doble"
                    android:layout_marginRight="@dimen/margin_doble"
                    android:background="@drawable/rounded_border_edittext"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/editMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@null"
                        android:backgroundTint="@color/transparent"
                        android:hint="@string/txt_mail"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:layout_weight="17"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">


            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btn_continueEnvio"
                style="@style/buttonDirecctionNext"
                android:gravity="center"
                android:text="@string/continuar" />


        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />


</LinearLayout>
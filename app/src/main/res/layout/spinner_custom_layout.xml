<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundEditText"
    android:orientation="horizontal">

    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
        android:id="@+id/editTextCustomSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_weight="2"
        android:backgroundTint="@color/transparent"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/whiteColor_disable"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewCustomSpinner"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/menu_canvas" />
    </RelativeLayout>
</LinearLayout>
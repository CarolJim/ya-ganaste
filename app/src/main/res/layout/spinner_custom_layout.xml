<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/laySpinnerCustom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_edittext"
    android:orientation="horizontal">

    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
        android:id="@+id/editTextCustomSpinner"
        style="@style/StyleEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/gray_text_wallet_3"
        android:textColorHint="@color/gray_text_wallet"
        android:longClickable="false"
        android:maxLines="1"
        android:textSize="@dimen/size_text_style_3_value" />

    <RelativeLayout
        android:layout_width="@dimen/custom_validation_edittext_imagelay_width"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewCustomSpinner"
            android:layout_width="15dp"
            android:layout_height="@dimen/custom_validation_edittext_image_height"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ico_select" />
    </RelativeLayout>
</LinearLayout>
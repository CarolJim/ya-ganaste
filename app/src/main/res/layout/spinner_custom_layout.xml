<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_edittext"
    android:orientation="horizontal">

    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
        android:id="@+id/editTextCustomSpinner"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:textSize="@dimen/text_custom_validation_spinner_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewCustomSpinner"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/menu_canvas" />
    </RelativeLayout>
</LinearLayout>
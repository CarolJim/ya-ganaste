<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">


        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtTituloDescripcion"
            style="@style/generic_text_style_3"
            android:transitionName="@string/transition_name_mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            tools:text="Pago de servicio"
            tools:ignore="UnusedAttribute"
            android:layout_marginLeft="15.5dp"
            android:layout_marginStart="15.5dp"/>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtSubTituloDetalle"
            style="@style/generic_text_style_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/texthint"
            android:maxLines="1"
            tools:text="Pago de servicio"
            android:layout_marginLeft="15.5dp"
            android:layout_marginStart="15.5dp"
            android:layout_below="@id/txtTituloDescripcion"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13.5dp"
        android:layout_marginEnd="13.5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.pagatodo.yaganaste.utils.customviews.MontoTextView
            android:id="@+id/txt_monto"
            style="@style/generic_text_style_2"
            android:textColor="@color/texthint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="12sp"
            app:decimalLenght="2"
            app:dotBottom="true"
            app:symbolSmaller="false"
            app:tipo="Text"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/up_down"
            android:layout_width="10dp"
            android:layout_height="9dp"
            android:layout_marginRight="6dp"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="8.1dp"/>
    </LinearLayout>
    <view
        android:background="@color/colr_item_movement"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
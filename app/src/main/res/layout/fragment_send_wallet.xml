<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="1px"
        android:layout_height="1px"
        android:inputType="text" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_envio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                style="@style/H1Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Enviar dinero a" />


            <LinearLayout
                android:id="@+id/component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border_rectangle"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <com.pagatodo.view_manager.components.HeadWallet
                    android:id="@+id/headWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center_horizontal|center_vertical"
                    app:walletResImage="@mipmap/main_card_zoom_blue"
                    app:headAmount="1000"
                    app:headTitle="@string/app_name"
                    tools:ignore="MissingConstraints">

                </com.pagatodo.view_manager.components.HeadWallet>
            </LinearLayout>

            <LinearLayout
            android:id="@+id/componentfavo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <com.pagatodo.view_manager.components.HeadAccount
                android:id="@+id/head_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:labeVisibility="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
        </LinearLayout>


            <RelativeLayout
                android:id="@+id/itemGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/ic_circle_border_shadow"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/crlImageFavorite"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:civ_border_color="#FF09CC20" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/txtInicialesFav"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_receiver_name"
                style="@style/H4Gris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:text="Omar Alejandro"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linera_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/tv_sign"
                    style="@style/generic_calculator_sign_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="$"
                    android:textColor="@color/colorAccent" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/tv_monto_entero"
                    style="@style/generic_calculator_integer_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="."
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/tv_monto_decimal"
                        style="@style/generic_calculator_decimal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="00"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>
            </LinearLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                style="@style/H4Gris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="@string/ingresa_monto"
                android:textSize="11sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/edit_nombre"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/inputtext_normal"
                android:gravity="center_vertical"
                android:hint="@string/concepto"
                android:maxLines="1"
                android:textColorHint="@color/texthint"
                app:counterEnabled="true"
                app:counterMaxLength="1"
                app:hintTextAppearance="@style/HintText"
                app:counterOverflowTextAppearance="@style/CounterOverFlow"
                app:passwordToggleTint="@color/hint_color"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edit_conc"
                    android:theme ="@style/NewEdittextwallet"
                    android:textColor="@color/grayColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_marginBottom="9dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lyt_saldo_disponible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight=".5"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            style="@style/H4Gris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/saldo_disponible_enviar"
            android:textSize="11sp" />

        <com.pagatodo.yaganaste.utils.customviews.MontoTextView
            android:id="@+id/saldoDisponible"
            style="@style/H2Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="$0.00"
            android:textSize="17sp"
            app:dotBottom="true"
            app:symbolSmaller="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="2.5"
        android:gravity="bottom">

        <com.pagatodo.yaganaste.utils.customviews.CustomKeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/material_key_drawable"
            android:keyTextColor="#bcbcbc"
            android:keyTextSize="27sp"
            android:visibility="visible" />

    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/enviar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_gravity="center_vertical"
        android:text="@string/btn_send"
        android:textAlignment="center"
        android:textSize="19sp"/>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtRegisterAddressTitle"
        style="@style/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/more_data_and_finish"
        app:tipo="Descripcion" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtRegisterAddressTitle"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerGender"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_between_forms"
                app:backgroundTint="@android:color/white" />


            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtRegisterAddressGenderDesc"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/put_your_gender"
                app:tipo="Indicacion" />

            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/edtxtRegisterAddressBirthDay"
                style="@style/InputTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtRegisterAddressBirthDayDesc"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/put_your_birthday"
                app:tipo="Indicacion" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerBirthPlace"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_between_forms"
                app:backgroundTint="@android:color/white" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtRegisterAddressBirthPlaceDesc"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birth_place"
                app:tipo="Indicacion" />

            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/edtxtRegisterAddressCP"
                style="@style/InputTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="5" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/textDescInputs"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postal_code"
                app:tipo="Indicacion" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spRegisterAddressColonia"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_between_forms"
                app:backgroundTint="@android:color/white" />


            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtRegisterAddressColoniaDesc"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colonia"
                app:tipo="Indicacion" />


            <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                android:id="@+id/edtxtRegisterAddressStreet"
                style="@style/InputTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtRegisterAddressStreetDesc"
                style="@style/textDescInputs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/street"
                app:tipo="Indicacion" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/edtxtRegisterAddressNoExt"
                        style="@style/InputTextForms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="8"
                        android:nextFocusDown="@+id/edtxtRegisterAddressNoInt"
                        android:nextFocusForward="@+id/edtxtRegisterAddressNoInt"
                        android:nextFocusRight="@+id/edtxtRegisterAddressNoInt" />

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        style="@style/textDescInputs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/outside_number"
                        app:tipo="Indicacion" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
                        android:id="@+id/edtxtRegisterAddressNoInt"
                        style="@style/InputTextForms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="5" />

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        style="@style/textDescInputs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/intern_number"
                        app:tipo="Indicacion" />

                </LinearLayout>

            </LinearLayout>


            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnRegisterAddressNext"
                style="@style/buttonRoundedBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/btn_margin_bottom"
                android:layout_marginTop="@dimen/margin_big"
                android:text="@string/next"
                app:cornerRadius="@dimen/btn_corner_radius" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

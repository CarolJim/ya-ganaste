<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/mainLayoutCarousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layoutCarouselFav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <com.pagatodo.yaganaste.utils.customviews.carousel.Carousel
                    android:id="@+id/carouselFav"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!--<com.pagatodo.yaganaste.utils.customviews.carousel.Carousel
                    android:id="@+id/carouselFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone" />-->

            </LinearLayout>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtLoadingServices"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="250dp"
                android:text="@string/no_services_msg"
                android:textSize="20sp"
                android:visibility="gone"
                app:tipo="Titulo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|bottom">

                <ImageView
                    android:id="@+id/imgPagosMain"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="4dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_fav"
                    tools:ignore="ContentDescription" />

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    style="@style/generic_text_style_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/favoritos_tag"
                    android:textSize="14sp"
                    app:tipo="Descripcion"/>

            </LinearLayout>





        </RelativeLayout>

        <Button
            android:id="@+id/paymentTabBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Me!!"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="270dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtTitleNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_3_value"
        android:visibility="visible"
        app:tipo="Titulo" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtMessageNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:padding="5dp"
        android:lines="0"
        android:text="Mensaje d error"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_3_value"
        android:visibility="invisible"
        app:tipo="Descripcion" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgYaGanasteCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@mipmap/main_card_zoom_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/my_card_name_user"
                style="@style/generic_text_style_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Frank Manzo" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/my_card_num_cuenta"
                style="@style/generic_text_style_4"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                tools:text="Tarjeta: **** **** **** 5678" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/my_card_last_time"
                style="@style/generic_text_style_4"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                tools:text="Utilizada Por Ultima Vez: 23/Mar/17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_candado_open" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/mycard_switch"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SCBSwitch"
                android:thumb="@drawable/block_card_switch"
                app:track="@drawable/switch_compat_custom_track" />


        </LinearLayout>
    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnConfirmDialog"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_margin_pinpad"
        android:layout_weight="0.25"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ic_phone_white_24dp"
        android:gravity="center"
        android:textAllCaps="false"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:intercepterOnclick="true" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnCancelDialog"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_text_style_2_value"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:intercepterOnclick="true" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="270dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:tint="@color/whiteColor"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_fingerprint_white_48dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtTitleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/size_text_style_3_value"
            android:visibility="visible"
            app:tipo="Titulo" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtMessageNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:lines="5"
            android:padding="5dp"

            android:text="Mensaje de error"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/size_text_style_3_value"
            android:visibility="visible"
            app:tipo="Descripcion" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2.3">


            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnCancelDialogh"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/button_rounded_blue"
                android:gravity="center"
                android:text="@string/title_aceptar"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/size_text_style_2_value"
                android:visibility="invisible"
                app:cornerRadius="@dimen/btn_corner_radius"
                app:intercepterOnclick="true" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnConfirmDialog"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_margin_pinpad"
                android:layout_weight="2"
                android:gravity="right"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="Usar Contraseña"
                android:textColor="@color/colorAccent"
                app:cornerRadius="@dimen/btn_corner_radius"
                app:intercepterOnclick="true" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_containerllamr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:id="@+id/btnCancelDialog"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Usar Contraseña"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"

            app:cornerRadius="@dimen/btn_corner_radius"
            app:intercepterOnclick="true" />
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
    </LinearLayout>
</LinearLayout>
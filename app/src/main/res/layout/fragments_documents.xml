<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_we_need_some_files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.BussinesActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">



        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/size_text_style_2_value"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="17dp"
                    android:text="@string/Documentos"/>

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/titulo_datos_usuario"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:text="@string/sub_titulo_documentos"
                    android:textAlignment="center"
                    android:textColor="@color/adadad"
                    android:textSize="14sp"
                    app:tipo="Text" />
                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:id="@+id/titulo_ine"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:text="@string/sub_titulo_ine"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp"
                    app:tipo="Text" />





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                       >

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            style="@style/generic_text_style_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:text="@string/documents_vigentes" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lyWeNeedSmFilesIFEfront"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:orientation="vertical">
                                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                    style="@style/generic_text_style_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_between_forms"
                                    android:gravity="start"
                                    android:text="Frente" />
                                <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                    android:id="@+id/itemWeNeedSmFilesIFEfront"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lyWeNeedSmFilesIFEBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/lyWeNeedSmFilesIFEfront"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:orientation="vertical">
                                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                    style="@style/generic_text_style_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_margin="@dimen/space_between_forms"
                                    android:gravity="center"
                                    android:text="Reverso" />
                                <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                    android:id="@+id/itemWeNeedSmFilesIFEBack"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>







                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            style="@style/generic_text_style_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:text="@string/documents_comprobantes"
                            android:visibility="gone" />

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:gravity="center_horizontal"
                            android:text="@string/documents_comprobantes"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="11sp"
                            app:tipo="Text" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lyWeNeedSmFilesIFEAddressCommerceFront"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:orientation="vertical">

                                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                    style="@style/generic_text_style_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_between_forms"
                                    android:gravity="center"
                                    android:text="Frente" />

                                <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                    android:id="@+id/itemWeNeedSmFilesAddressFront"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lyWeNeedSmFilesIFEAddressCommerce"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                    style="@style/generic_text_style_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_between_forms"
                                    android:gravity="center"
                                    android:text="Reverso" />

                                <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                    android:id="@+id/itemWeNeedSmFilesAddressBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <com.pagatodo.yaganaste.utils.customviews.StyleButton
                        android:id="@+id/btnWeNeedSmFilesNext"
                        style="@style/buttonSquareRoundedBlue"
                        android:layout_alignTop="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="177dp"
                        android:background="@drawable/button_rounded_blue"
                        android:gravity="center"
                        android:text="@string/nextButton" />


                <LinearLayout
                    android:id="@+id/lnr_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lnr_buttons"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        style="@style/generic_text_style_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:text="@string/documents_help" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/lnr_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnRegresar"
                style="@style/buttonDirecctionBackSmall"
                android:text="@string/backButton"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <!--com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_progress"
        android:visibility="gone" /-->

</LinearLayout>

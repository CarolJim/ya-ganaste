<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_we_need_some_files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pagatodo.yaganaste.ui._controllers.BussinesActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/first_cube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="IdentificaciÃ³n Oficial Vigente">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_horizontal_margin">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:text="@string/documents_vigentes"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lyWeNeedSmFilesIFEfront"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                android:id="@+id/itemWeNeedSmFilesIFEfront"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_between_forms"
                                android:gravity="center"
                                android:text="Frente"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyWeNeedSmFilesIFEBack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/lyWeNeedSmFilesIFEfront"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                                android:id="@+id/itemWeNeedSmFilesIFEBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_between_forms"
                                android:gravity="center"
                                android:text="Reverso"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/lyWeNeedSmFilesIFEAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:title="Comprobante de Domicilio">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_horizontal_margin">

                <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="@string/documents_comprobantes"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lyWeNeedSmFilesIFEAddressCommerceFront"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                            android:id="@+id/itemWeNeedSmFilesAddressFront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_between_forms"
                            android:gravity="center"
                            android:text="Frente"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyWeNeedSmFilesIFEAddressCommerce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.pagatodo.yaganaste.utils.customviews.UploadDocumentView
                            android:id="@+id/itemWeNeedSmFilesAddressBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_between_forms"
                            android:gravity="center"
                            android:text="Reverso"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/lnr_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnr_buttons"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:visibility="visible"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:text="@string/documents_help"
            android:textSize="11dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_medium"
        android:visibility="visible"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegresar"
            style="@style/buttonDirecctionBack"
            android:layout_weight="1"
            android:text="@string/volver" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnWeNeedSmFilesNext"
            style="@style/buttonDirecctionNext"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnBack"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_weight="2"
            android:text="@string/next" />
    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_progress"
        android:visibility="gone" />

</RelativeLayout>

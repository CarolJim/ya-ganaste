<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleDatosUsuario"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="-9dp"
        android:background="@drawable/rounded_border_layout"
        android:orientation="vertical">


        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/edtitEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            app:formato="email"
            app:maxLength="50"
            app:isSingleLine="true"
            app:hintText="Correo Electr칩nico" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/edtitConfirmEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtitEmail"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            app:formato="email"
            app:maxLength="50"
            app:isSingleLine="true"
            app:hintText="Correo Electr칩nico" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtitConfirmEmail"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            app:formato="password"
            app:maxLength="16"
            app:isSingleLine="true"
            app:hintText="Contrase침a" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPassword"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            app:formato="password"
            app:maxLength="16"
            app:isSingleLine="true"
            app:hintText="Confirmar contrase침a" />
    </RelativeLayout>


    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtTitleDatosUsuario"
        style="@style/TitleMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        android:text="Datos del Usuario"
        app:tipo="Descripcion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="horizontal">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtRegisterBasicPassMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:layout_above="@+id/btnNextDatosUsuario"
            android:text="@string/your_password_need_to_have"
            app:tipo="Descripcion" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnNextDatosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:layout_centerInParent="true"
            android:text="@string/next" />
    </RelativeLayout>
</RelativeLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pagatodo.yaganaste.ui.account.login.AccessCodeGenerateFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Layout para codigo de acceso" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgArrowBack"
            android:layout_width="@dimen/activity_horizontal_double_margin"
            android:layout_height="@dimen/activity_horizontal_double_margin"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:srcCompat="@drawable/back_canvas" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgArrowNext"
            android:visibility="visible"
            android:layout_width="@dimen/activity_horizontal_double_margin"
            android:layout_height="@dimen/activity_horizontal_double_margin"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/arrow_canvas_blue" />

    </LinearLayout>
</FrameLayout>

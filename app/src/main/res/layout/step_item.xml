<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/step_inactive"
        android:layout_width="@dimen/item_step_s"
        android:layout_height="@dimen/item_step_s"
        android:background="@drawable/bck_step_inactive"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/text_step"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/step_active"
        android:layout_width="@dimen/item_step"
        android:layout_height="@dimen/item_step"
        android:background="@drawable/bck_step_active"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_num_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/text_step"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/step_check"
        android:layout_width="@dimen/item_step_s"
        android:layout_height="@dimen/item_step_s"
        android:background="@drawable/bck_step_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text_num_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/text_step"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/item_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/zone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="13.5dp">

        <ImageView
            android:id="@+id/ic_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"/>

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/title"
            android:layout_gravity="center_vertical"
            android:text="@string/navigation_drawer_menu_seguridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/generic_text_style_2"
            android:textColor="@color/text_item_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ic_item"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/ic_item" />

    </RelativeLayout>

    <View
        android:id="@+id/dividerList"
        android:background="@color/decoration_item_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/zone"
        android:layout_marginTop="14.5dp"
        android:layout_marginLeft="30dp"
        android:visibility="visible"
        android:layout_marginStart="30dp" />

</RelativeLayout>
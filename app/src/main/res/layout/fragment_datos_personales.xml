<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">


    <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
        android:id="@+id/layoutContent"
        style="@style/BorderTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        app:title="@string/personalInfoTitle">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/generic_padig">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/generTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_big"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/seleccionaGenero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/selecciona_genero" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorGenderMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                </LinearLayout>


                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/generTitle"
                    android:orientation="horizontal"
                    android:theme="@style/RadioButtonTheme">


                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radioBtnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/female" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radioBtnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/male" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                </RadioGroup>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGender"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editNames"
                        style="@style/FragmentElement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        app:formato="text"
                        app:hintText="@string/nameHint"
                        app:imageIsGone="true"
                        app:isSingleLine="true"
                        app:maxLength="30" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorNameMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editFirstLastName"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:formato="text"
                        app:hintText="@string/last_name"
                        app:imageIsGone="true"
                        app:isSingleLine="true"
                        app:maxLength="30" />


                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorFLastNameMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />


                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editSecoundLastName"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:formato="text"
                        app:hintText="@string/second_last_name"
                        app:imageIsGone="true"
                        app:isSingleLine="true"
                        app:maxLength="30" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editBirthDay"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        app:formato="text"
                        app:hintText="@string/birthDay"
                        app:imageIsGone="true"
                        app:isTextEnabled="false" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorBirthDayMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/spinnerBirthPlace"
                        style="@style/SpinnerNoArrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:background="@null"
                        android:backgroundTint="@color/transparent" />


                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorBirthPlaceMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_doble"
                        android:visibility="visible" />
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBackPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btns"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1.4"
                android:background="@drawable/selector_btn_back"
                android:text="@string/backButton"
                android:textAllCaps="false"
                android:textSize="@dimen/generic_button_normal_text_size"/>

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btns"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_continuar"
                android:gravity="center"
                android:text="@string/nextButton"
                android:textAllCaps="false"
                android:textSize="@dimen/generic_button_normal_text_size"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
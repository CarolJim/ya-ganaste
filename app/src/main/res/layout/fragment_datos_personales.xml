<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">
    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/size_text_style_2_value"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="27dp"
        android:text="@string/personalInfoTitle"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/titulo_datos_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:text="@string/sub_titulo_datos_personales"
                android:textAlignment="center"
                android:textColor="@color/adadad"
                android:textSize="14sp"
                app:tipo="Text" />
            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/layoutContent"
                style="@style/BorderTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title="@string/personalInfoTitle">

                <LinearLayout
                    style="@style/BorderLayoutContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/generTitle"
                        android:layout_width="100dp"
                        android:layout_marginRight="8.5dp"
                        android:background="@drawable/inputtext_normal"
                        android:layout_height="50dp"
                        android:orientation="vertical">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:id="@+id/seleccionaGenero"
                            style="@style/generic_text_style_3.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/genero" />
                    <RadioGroup
                        android:id="@+id/radioGender"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:theme="@style/RadioButtonTheme">


                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radioBtnFemale"
                            style="@style/generic_text_style_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/ico_female"
                             />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radioBtnMale"
                            style="@style/generic_text_style_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:gravity="center"

                            android:background="@drawable/ico_male"
                            />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                    </RadioGroup>

                    </LinearLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColorHint="@color/texthint"
                            app:passwordToggleTint="@color/hint_color"
                            android:hint="@string/datos_personal_nombre_b"
                            android:theme="@style/TextLabel"
                            android:paddingLeft="6dp"
                            android:paddingTop="1dp"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:background="@drawable/inputtext_normal"
                            tools:ignore="UnusedAttribute">

                            <EditText
                                android:id="@+id/edit_nombre"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="9dp"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColor="@color/texthint" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editNames"
                            style="@style/FragmentElement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            app:formato="text"
                            app:hintText="@string/nameHint"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30"
                            android:visibility="gone"
                            />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorNameMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_apater"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/edit_nombre"
                            android:background="@drawable/inputtext_normal"
                            android:gravity="center_vertical"
                            android:hint="@string/datos_personal_paterno"
                            android:maxLines="1"
                            android:paddingLeft="6dp"
                            android:textColorHint="@color/texthint"
                            android:theme="@style/TextLabel"
                            app:passwordToggleTint="@color/hint_color"
                            tools:ignore="UnusedAttribute">

                            <EditText
                                android:id="@+id/edit_appater"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="9dp"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColor="@color/texthint" />

                        </android.support.design.widget.TextInputLayout>


                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editFirstLastName"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:formato="text"
                            app:hintText="@string/last_name"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30"
                            android:visibility="gone"
                            />


                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorFLastNameMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_amaterno"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/texthint"
                            app:passwordToggleTint="@color/hint_color"
                            android:hint="@string/datos_personal_materno"
                            android:theme="@style/TextLabel"
                            android:paddingLeft="6dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/inputtext_normal"
                            tools:ignore="UnusedAttribute">

                            <EditText
                                android:id="@+id/edit_apmaterno"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="9dp"
                                android:textColor="@color/texthint"
                                android:singleLine="true"
                                android:imeOptions="actionDone"
                                android:layout_below="@+id/text_apater"
                                android:background="@android:color/transparent"/>

                        </android.support.design.widget.TextInputLayout>


                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editSecoundLastName"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:formato="text"
                            app:hintText="@string/second_last_name"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30"
                            android:visibility="gone"
                            />
                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <Spinner
                            android:id="@+id/spinnergenero"
                            style="@style/SpinnerNoArrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_xsmall"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@color/transparent"
                            android:visibility="gone"
                            />
                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorGenderMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editBirthDay"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            app:formato="text"
                            app:hintText="@string/birthDay"
                            android:layout_below="@+id/text_amaterno"
                            app:imageIsGone="true"
                            android:imeOptions="actionNext"
                            app:isTextEnabled="false" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorBirthDayMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_border_edittext"
                            android:elevation="2dp"
                            >

                            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                style="@style/generic_text_style_4"
                                android:id="@+id/subfechanacimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="Lugar de Nacimiento"
                                android:visibility="gone"
                                android:textColor="@color/adadad" />
                            <Spinner
                            android:id="@+id/spinnerBirthPlace"
                            style="@style/SpinnerNoArrow"
                                android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             />
                        </LinearLayout>

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorBirthPlaceMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_border_edittext"
                            android:elevation="2dp"
                            >

                            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                style="@style/generic_text_style_4"
                                android:id="@+id/lugarnacimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="Lugar de Nacimiento"
                                android:visibility="visible"
                                android:textColor="@color/adadad"/>
                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editCountry"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:visibility="visible"
                            app:formato="text"
                            app:hintText="@string/county"
                            app:imageIsGone="false"
                            app:isTextEnabled="false" />
                        </LinearLayout>

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorCountryMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editCurp"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:inputType="textCapSentences"
                            android:visibility="gone"
                            app:formato="text"
                            app:hintText="@string/curp"
                            app:imageIsGone="true"
                            app:isTextEnabled="true" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorCurp"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBackPersonalInfo"
                style="@style/buttonDirecctionBackSmall"
                android:text="@string/backButton"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextPersonalInfo"
                style="@style/buttonSquareRoundedBlue"
                android:background="@drawable/button_rounded_blue"
                android:gravity="center"
                android:text="@string/nextButton" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
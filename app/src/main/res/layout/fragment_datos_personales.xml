<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
        android:id="@+id/layoutContent"
        style="@style/BorderTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        app:title="@string/personalInfoTitle">


        <RadioGroup
            android:id="@+id/radioGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_doble"
            android:gravity="center"
            android:orientation="horizontal"
            android:theme="@style/RadioButtonTheme">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioBtnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/female" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioBtnMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/male" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </RadioGroup>

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editNames"
            style="@style/FragmentElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGender"
            app:formato="text"
            app:hintText="@string/nameHint"
            app:imageIsGone="true"
            app:isSingleLine="true"
            app:maxLength="30" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editFirstLastName"
            style="@style/FragmentElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editNames"
            app:formato="text"
            app:hintText="@string/last_name"
            app:imageIsGone="true"
            app:isSingleLine="true"
            app:maxLength="30" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editSecoundLastName"
            style="@style/FragmentElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editFirstLastName"
            app:formato="text"
            app:hintText="@string/second_last_name"
            app:imageIsGone="true"
            app:isSingleLine="true"
            app:maxLength="30" />

        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
            android:id="@+id/editBirthDay"
            style="@style/FragmentElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editSecoundLastName"
            android:focusableInTouchMode="false"
            app:formato="text"
            app:hintText="@string/birthDay"
            app:imageIsGone="true"
            app:isTextEnabled="false" />

        <Spinner
            android:id="@+id/spinnerBirthPlace"
            style="@style/SpinnerNoArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editBirthDay"
            android:layout_marginBottom="@dimen/margin_big"
            android:background="@null"
            android:backgroundTint="@color/transparent" />

    </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
        android:id="@+id/errorMessage"
        android:layout_below="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBackPersonalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="@string/backButton"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnNextPersonalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="@string/nextButton"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>
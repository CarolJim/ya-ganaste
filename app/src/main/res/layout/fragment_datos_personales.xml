<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/layoutContent"
                style="@style/BorderTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title="@string/personalInfoTitle">

                <LinearLayout
                    style="@style/BorderLayoutContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/generTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:id="@+id/seleccionaGenero"
                            style="@style/generic_text_style_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/selecciona_genero" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorGenderMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:theme="@style/RadioButtonTheme">


                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radioBtnFemale"
                            style="@style/generic_text_style_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/female" />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <RadioButton
                            android:id="@+id/radioBtnMale"
                            style="@style/generic_text_style_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/male" />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editNames"
                            style="@style/FragmentElement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            app:formato="text"
                            app:hintText="@string/nameHint"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorNameMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editFirstLastName"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:formato="text"
                            app:hintText="@string/last_name"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30" />


                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorFLastNameMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />


                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editSecoundLastName"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:formato="text"
                            app:hintText="@string/second_last_name"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editBirthDay"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            app:formato="text"
                            app:hintText="@string/birthDay"
                            app:imageIsGone="true"
                            app:isTextEnabled="false" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorBirthDayMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/spinnerBirthPlace"
                            style="@style/SpinnerNoArrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            android:background="@null"
                            android:backgroundTint="@color/transparent" />


                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorBirthPlaceMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editCountry"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:visibility="visible"
                            app:formato="text"
                            app:hintText="@string/county"
                            app:imageIsGone="false"
                            app:isTextEnabled="false" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorCountryMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editCurp"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:inputType="textCapSentences"
                            android:visibility="gone"
                            app:formato="text"
                            app:hintText="@string/curp"
                            app:imageIsGone="true"
                            app:isTextEnabled="true" />

                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorCurp"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBackPersonalInfo"
                style="@style/buttonDirecctionBackSmall"
                android:text="@string/backButton"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/btns_separation"
                android:layout_height="match_parent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNextPersonalInfo"
                style="@style/buttonDirecctionNext"
                android:gravity="center"
                android:text="@string/nextButton" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
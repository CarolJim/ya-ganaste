<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/inputtext_normal"
        android:orientation="vertical">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/bussinesName"
            android:id="@+id/tipo_envio"
            style="@style/generic_text_style_4"
            android:layout_gravity="start"
            android:visibility="visible"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnTypeSend"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                tools:ignore="UnusedAttribute"
                android:layout_marginStart="15dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewCustomSpinner"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="4dp"
                android:adjustViewBounds="true"
                android:tint="@color/colorAccent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ico_select"
                android:layout_marginEnd="21dp" />

        </LinearLayout>
    </LinearLayout>

    <com.pagatodo.yaganaste.utils.customviews.GenericTabLayout
        android:id="@+id/tab_months"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/filter"
        app:tabTextColor="#9ca2a8"
        app:tabIndicatorColor="@color/whiteColor"
        app:tabGravity="center"
        app:tabMode="fixed"/>

    <!--com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txt_info_movements"
        style="@style/generic_text_style_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_months"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/margin_doble"
        android:gravity="center_horizontal"
        android:text="@string/no_movimientos"
        android:textSize="@dimen/frag_inicio_tab_no_movements_text_size"
        android:visibility="visible" /-->

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title"
        style="@style/generic_text_style_5"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:paddingLeft="18dp"
        android:gravity="center_vertical"
        android:background = "@color/tab_movement_undselected"
        android:text="Movimientos Recientes"
        android:layout_below="@id/tab_months"
        android:paddingStart="18dp"
        android:visibility="visible"
        tools:ignore="RtlSymmetry" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:orientation="vertical">


        <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonContinue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_movements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:visibility="visible" />

        </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

        <com.pagatodo.view_manager.buttons.ButtonContinue
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/label_btn_see_account_statement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progress_emisor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
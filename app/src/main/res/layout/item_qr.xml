<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/text_name_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#46606a"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name_qr" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/text_qr_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#46606a"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_qr" />
</android.support.constraint.ConstraintLayout>
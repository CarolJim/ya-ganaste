<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui_wallet.fragments.ProcessRequestPaymentFragment">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txt_paymentTitle"
        style="@style/generic_text_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/txt_confirm_request" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/textView"
        style="@style/generic_text_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_importe"
        app:tipo="Text" />

    <com.pagatodo.yaganaste.utils.customviews.MontoTextView
        android:id="@+id/txt_amount_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00"
        android:textAlignment="center"
        android:textSize="@dimen/size_text_style_7_value"
        app:dotBottom="false"
        app:symbolSmaller="true" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_request_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="horizontal" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_border_edittext"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
            android:id="@+id/edt_message_payment"
            style="@style/GenericStyleEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="@string/txt_add_message_request"
            android:maxLength="150" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btn_send_payment"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/width_btns_big"
        android:layout_height="@dimen/height_btns"
        android:layout_gravity="center|bottom"
        android:background="@drawable/button_rounded_blue"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_2_value"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:intercepterOnclick="true" />

</LinearLayout>

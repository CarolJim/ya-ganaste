<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.pagatodo.yaganaste.ui._controllers.AdqActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLy"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarLy">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imgInsertDongle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_imageAssetsFolder="images/insert_dongle/"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/insert_dongle" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imgInsertCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_imageAssetsFolder="images/insert_card/"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/insert_slide_card" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/searchBluetoothDevice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_imageAssetsFolder="images/bt_search/"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/bluetooth_searching" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imgInsertCardBt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_imageAssetsFolder="images/insert_bluetooth/"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/insert_bluetooth" />

            <!--
             <pl.droidsonroids.gif.GifImageView
                 android:id="@+id/imgInsertDongle"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:scaleType="centerCrop"
                 android:src="@mipmap/dongle_insert"
                 tools:ignore="ContentDescription" />

             <pl.droidsonroids.gif.GifImageView
                 android:id="@+id/imgInsertCard"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:scaleType="centerCrop"
                 android:src="@mipmap/dongle_insert_card"
                 android:visibility="invisible"
                 tools:ignore="ContentDescription" />
            -->

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/tv_txt_lector"
                style="@style/GenericSubTextTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inserta_el_lector_para_ncontinuar"
                android:textColor="@color/whiteColor"
                app:tipo="Text" />


        </RelativeLayout>
    </LinearLayout>

    <!--com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/-->

</RelativeLayout>

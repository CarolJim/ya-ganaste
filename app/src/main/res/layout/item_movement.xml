<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <View
            android:id="@+id/layout_movement_type_color"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/redcolor" />

        <LinearLayout
            android:id="@+id/layout_movement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/layout_movement_type_color"
            android:layout_toRightOf="@+id/layout_movement_type_color"
            android:gravity="center"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_item_mov_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18"
                style="@style/ItemMovement" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_item_mov_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Feb"
                style="@style/ItemMovement" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/layout_movement_date"
            android:layout_toLeftOf="@+id/layout_movement_amount"
            android:layout_toRightOf="@+id/layout_movement_date"
            android:layout_toStartOf="@+id/layout_movement_amount"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_premios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pago de servicio"
                android:textColor="@android:color/white"
                style="@style/ItemMovement" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pago de servicio"
                style="@style/ItemMovement" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_movement_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="-$499."
                android:textColor="@color/redcolor"
                android:textSize="20sp"
                style="@style/ItemMovement" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txt_item_mov_cents"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                tools:text="00"
                android:textColor="@color/redcolor"
                android:textSize="14sp"
                style="@style/ItemMovement" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
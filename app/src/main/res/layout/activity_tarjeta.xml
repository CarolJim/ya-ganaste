<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pagatodo.yaganaste.ui.preferuser.MyCardFragment">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/lyt_princpal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent"/>

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/textView2"
                style="@style/generic_text_style_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/administracion"
                android:textColor="@color/whiteColor"/>


            <com.pagatodo.yaganaste.utils.customviews.YaGanasteCard
                android:id="@+id/imgYaGanasteCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <ListView
                android:id="@+id/list_view_admon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgYaGanasteCard"
                android:layout_marginTop="20dp"
                />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
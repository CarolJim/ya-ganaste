<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@drawable/bg_gradient_bottom"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <!--
        Lineas que causaron conflicto en el RelativeLayout
        android:layout_toEndOf="@+id/progressLayout"
        android:layout_toRightOf="@+id/progressLayout"
        -->

        <include
            android:id="@+id/toolbarLy"
            layout="@layout/toolbar" />

        <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
            android:id="@+id/layoutContent"
            style="@style/BorderTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarLy"
            app:title="@string/currentAddressTitle">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/generic_padig">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editStreet"
                        style="@style/FragmentElementTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:formato="text"
                        app:hintText="@string/streetHint"
                        app:isSingleLine="true"
                        app:maxLength="30" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorStreetMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/layNumbers"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editExtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            app:formato="text"
                            app:hintText="@string/outdoorNumber"
                            app:isSingleLine="true"
                            app:maxLength="4" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/generic_padig"
                            android:layout_height="match_parent" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editIntNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            app:formato="text"
                            app:hintText="@string/interiorNumber"
                            app:isSingleLine="true"
                            app:maxLength="5" />

                    </LinearLayout>

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorNumeroMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editZipCode"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:formato="zipcode"
                        app:hintText="@string/zipCodeHint"
                        app:isSingleLine="true"
                        app:maxLength="5" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorZipCodeMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                        android:id="@+id/editState"
                        style="@style/FragmentElementWithValidation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintText="@string/stateHint" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/spColonia"
                        style="@style/SpinnerNoArrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:backgroundTint="@color/transparent" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorColoniaMessage"
                        android:layout_marginBottom="@dimen/space_between_elements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </ScrollView>


        </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:id="@+id/radioBtnTermsLayOut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/radioBtnTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_btn"
                        android:button="@null"
                        android:checked="true" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_weight="85"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/txtLegales"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_screen_size_normal"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/terms_and_conditions"
                        app:tipo="Descripcion" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:orientation="horizontal">

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnBackDomicilioActual"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btns"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/generic_button_normal_text_size"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_weight="1.4"
                    android:background="@drawable/selector_btn_back"
                    android:text="@string/backButton"
                    android:textAllCaps="false" />

                <com.pagatodo.yaganaste.utils.customviews.StyleButton
                    android:id="@+id/btnNextDomicilioActual"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btns"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/generic_button_normal_text_size"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_continuar"
                    android:gravity="center"
                    android:text="@string/nextButton"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.pagatodo.yaganaste.utils.customviews.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
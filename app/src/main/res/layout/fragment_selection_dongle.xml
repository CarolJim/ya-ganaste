<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_select_dongle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/select_dongle_title"
        android:textColor="@color/colorAccent" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/desc_bluetooth_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_select_dongle"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/select_dongle_desc"
        android:textColor="@color/gray_text_wallet_3"
        android:textSize="14sp"/>

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/desc_bluetooth_instructions"
        android:layout_marginTop="25dp"
        android:background="@color/gray_text_wallet" />

    <LinearLayout
        android:id="@+id/lyt_bt_dongle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/divider_1"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/lector_bt" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/bluetooth_dongle"
                android:textColor="@color/colorAccent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:textSize="12sp"
                android:textColor="@color/gray_slate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/bluetooth_dongle_desc" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_type_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/rdb_not_pressed" />

    </LinearLayout>

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyt_bt_dongle"
        android:background="@color/gray_text_wallet" />

    <LinearLayout
        android:id="@+id/lyt_normal_dongle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/divider_2"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@mipmap/lector_front" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/normal_dongle"
                android:textColor="@color/colorAccent" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/gray_slate"
                android:gravity="center"
                android:text="@string/normal_dongle_desc" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_type_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/rdb_not_pressed" />

    </LinearLayout>

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyt_normal_dongle"
        android:background="@color/gray_text_wallet" />

</RelativeLayout>
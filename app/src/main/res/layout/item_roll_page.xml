<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBgRollPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/carrousel1"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtHeadRollPage"
            style="@style/generic_text_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:gravity="center"
            android:text="Hola"
            app:tipo="Descripcion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="0.25"
            android:src="@drawable/tab_inidicator_selected" />

        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="0.25"
            android:src="@drawable/tab_indicator_default" />

        <ImageView
            android:id="@+id/indicator3"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="0.25"
            android:src="@drawable/tab_indicator_default" />

        <ImageView
            android:id="@+id/indicator4"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="0.25"
            android:src="@drawable/tab_indicator_default" />
    </LinearLayout>


</RelativeLayout>
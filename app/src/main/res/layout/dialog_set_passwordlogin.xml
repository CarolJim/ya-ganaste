<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:minWidth="270dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtTitleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Ingresa tu contraseña\nparabloquear tu tarjeta"
            android:textColor="@color/gristexto"
            android:textSize="@dimen/size_text_style_2_half_value"
            android:visibility="visible"
            app:tipo="Descripcion" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/txtSubTitleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ingresa tu contraseña para autorizar descarga"
            android:textColor="@color/gray_text_wallet"
            android:textSize="@dimen/size_text_style_3_value"
            android:visibility="gone"
            app:tipo="Descripcion" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="center"
            >
            <include
                layout="@layout/asignar_pin_layout"

                />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_passwordnew"
                android:layout_width="290dp"
                android:layout_height="53dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/inputtext_normal"
                android:gravity="center"
                android:hint="@string/txt_escribe_tu_pass"
                android:visibility="visible"
                android:maxLines="1"
                android:textColorHint="@color/texthint"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/editUserPasswordnew"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingLeft="15dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/texthint"
                    android:theme="@style/NewEdittextwallet" />

            </android.support.design.widget.TextInputLayout>



            <LinearLayout
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/llay_eye_pass"
                android:layout_marginLeft="8dp"
                android:background="@drawable/inputtext_normal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/eye_img"
                    android:src="@drawable/icon_eye_pass"
                    />


            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/asignar_edittext"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:visibility="visible"
            android:inputType="number"
            android:maxLength="6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2.3">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnAuthorizeDialog"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/button_rounded_blue"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/size_text_style_2_value"
                app:cornerRadius="@dimen/btn_corner_radius"
                app:intercepterOnclick="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_admin_starbucks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:gravity="center"
        android:text="@string/admin_cards_starbucks"
        android:textColor="@color/blue_text_wallet"
        android:textSize="@dimen/size_text_style_2_value" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_starbucks_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scrollbars="none" />

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btn_save_admin_starbucks"
        android:layout_width="214dp"
        android:layout_height="@dimen/dimen_butoncurp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded_blue"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/size_text_style_2_value"
        app:cornerRadius="@dimen/btn_corner_radius"
        app:intercepterOnclick="true" />

</LinearLayout>
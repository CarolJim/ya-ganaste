<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:id="@+id/btn_phase_0"
            android:textColor="@color/whiteColor"
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_phase_1"
            android:textColor="@color/whiteColor"
            android:text="Fase 1 OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button

            android:id="@+id/btn_phase_2"
            android:textColor="@color/whiteColor"
            android:text="Fase 2 OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button

            android:id="@+id/btn_phase_3"
            android:textColor="@color/whiteColor"
            android:text="Fase 3 OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button

            android:id="@+id/btn_phase_4"
            android:textColor="@color/whiteColor"
            android:text="Completado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button

            android:id="@+id/btn_error_phase2"
            android:textColor="@color/whiteColor"
            android:text="Error Validando "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txt_status_info"
        android:gravity="center_horizontal"
        android:text="@string/txt_validate_info"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/content_progress"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <com.pagatodo.yaganaste.utils.customviews.StatusViewCupo
            xmlns:custom="http://schemas.android.com/apk/res/com.pagatodo.yaganaste"
            android:id="@+id/status_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:bgColor="#e1e1e1"
            app:firstColor="@android:color/holo_blue_bright"
            app:secondColor="@android:color/holo_green_dark"
            app:errorColor="@android:color/holo_red_dark"
            app:percent="0"
            app:startAngle="0"
            app:strokeWidth="15dp"
            />
        <TextView
            android:id="@+id/txt_status"
            android:gravity="center_horizontal"
            android:text="Validando\nDocumentos\n1/3"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/content_progress"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/txt_contactanos"
        android:gravity="center_horizontal"
        android:text="@string/txt_contacto"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:layout_height="wrap_content" />

        <com.pagatodo.yaganaste.utils.customviews.StyleButton
            android:visibility="gone"
            android:id="@+id/btnNextScreen"
            style="@style/buttonDirecctionNext"
            android:gravity="center"
            android:text="@string/nextButton"
            android:textSize="@dimen/text_size_normal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="50dp"
            />
    </RelativeLayout>

</LinearLayout>
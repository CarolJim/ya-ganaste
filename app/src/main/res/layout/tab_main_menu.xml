<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lnr_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@android:id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/logo_ya_ganaste" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@android:id/text1"
            style="@style/MainTabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deposito"
            android:textSize="@dimen/frag_inicio_tab_month_normal_text_size"
            app:tipo="Descripcion" />
    </LinearLayout>

</RelativeLayout>
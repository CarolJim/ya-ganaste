<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_bottom"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui._controllers.AccountActivity">

    <include
        android:id="@+id/toolbarLy"
        layout="@layout/toolbar" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtLetsStartTitle"
        style="@style/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLy"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/lets_start" />

    <com.pagatodo.yaganaste.utils.customviews.StyleEdittext
        android:id="@+id/edtxtLetsStartMail"
        style="@style/InputTextForms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLetsStartTitle"
        android:inputType="textEmailAddress"
        android:maxLength="50" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/txtLetsStartMailDesc"
        style="@style/textDescInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtLetsStartMail"
        android:text="@string/ingress_your_mail" />

    <com.pagatodo.yaganaste.utils.customviews.StyleButton
        android:id="@+id/btnLetsStartNext"
        style="@style/buttonRoundedBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:text="@string/next"
        app:cornerRadius="@dimen/btn_corner_radius" />


</RelativeLayout>

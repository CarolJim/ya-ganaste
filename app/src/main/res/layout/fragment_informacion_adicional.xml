<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lets_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui._controllers.AccountActivity">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/size_text_style_2_value"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="27dp"
        android:text="@string/title_informacion_adicional"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout
                android:id="@+id/layoutContent"
                style="@style/BorderTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/title_informacion_adicional">


                <LinearLayout
                    style="@style/BorderLayoutContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/titulo_datos_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/sub_titulo_datos_personales"
                        android:textAlignment="center"
                        android:textColor="@color/adadad"
                        android:textSize="14sp"
                        app:tipo="Text" />

                    <LinearLayout
                        android:id="@+id/layoutEresMexa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="19.5dp"
                            android:layout_gravity="center_vertical"
                            >
                            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                                android:layout_width="match_parent"
                                android:layout_weight=".5"
                                android:text="@string/txt_eres_mexa"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:textColor="@color/colorAccent"
                                android:textSize="11sp"

                                />

                            <RadioGroup
                                android:id="@+id/radioEresMexa"
                                android:layout_width="match_parent"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:visibility="visible">

                                <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                                    android:id="@+id/radioBtnEresMexaNo"
                                    style="@style/RadioButtonMenu"
                                    android:layout_width="45dp"
                                    android:layout_height="25dp"

                                    android:text="No" />

                                <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                                    android:id="@+id/radioBtnEresMexaYes"
                                    style="@style/RadioButtonMenu"
                                    android:layout_width="45dp"
                                    android:layout_height="25dp"
                                    android:checked="false"
                                    android:text="Si"/>
                            </RadioGroup>
                        </LinearLayout>



                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorRadioEresMexaMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <LinearLayout
                            android:id="@+id/layoutPais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/txtmexica"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/inputtext_normal"
                                android:layout_marginTop="6dp"
                                android:gravity="center_vertical"
                                android:hint="@string/txt_cargo"
                                android:maxLines="1"
                                android:paddingLeft="6dp"
                                android:textColorHint="@color/texthint"
                                android:theme="@style/TextLabel"
                                app:passwordToggleTint="@color/hint_color"
                                tools:ignore="UnusedAttribute">

                                <EditText
                                    android:id="@+id/editCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@android:color/transparent"
                                    android:imeOptions="actionNext"
                                    android:singleLine="true"
                                    android:textColor="@color/texthint" />

                            </android.support.design.widget.TextInputLayout>

                            <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                                android:id="@+id/editCountryold"
                                style="@style/FragmentElementWithValidation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_between_elements"
                                android:focusableInTouchMode="false"
                                android:visibility="gone"
                                app:formato="text"

                                app:hintText="@string/country_nationality"
                                app:imageIsGone="false"
                                app:isTextEnabled="false" />

                            <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                                android:id="@+id/errorCountryMessage"
                                style="@style/generic_text_style_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:id="@+id/spaceFamiliar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_between_elements"
                        android:visibility="gone" />


                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        style="@style/generic_text_style_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/colorAccent" />

                    <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                        android:id="@+id/errorRadioPublicServantMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="19.5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            android:layout_width="match_parent"
                            android:layout_weight=".5"
                            android:id="@+id/textPublicServant"
                            android:text="@string/publicServantQuestion"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"

                            android:textColor="@color/colorAccent"
                            android:textSize="11sp"

                            />

                        <RadioGroup
                            android:id="@+id/radioPublicServant"
                            android:layout_width="match_parent"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:visibility="visible">

                            <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                                android:id="@+id/radioBtnPublicServantNo"
                                style="@style/RadioButtonMenu"
                                android:layout_width="45dp"
                                android:layout_height="25dp"

                                android:text="No" />

                            <com.pagatodo.yaganaste.utils.customviews.CustomRadioButton
                                android:id="@+id/radioBtnPublicServantYes"
                                style="@style/RadioButtonMenu"
                                android:layout_width="45dp"
                                android:layout_height="25dp"
                                android:checked="false"
                                android:text="Si"/>
                        </RadioGroup>
                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/layoutFamiliarCargoPublico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:elevation="2dp"
                            android:id="@+id/txtparentesco"
                            android:layout_margin="2dp"
                            android:background="@drawable/inputtext_normal"
                            >
                        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                            style="@style/generic_text_style_4"
                            android:id="@+id/textoprentesco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="6dp"
                            android:text="Parentesco"
                            android:visibility="visible"
                            android:textColor="@color/hint_color" />

                        <Spinner
                            android:id="@+id/spParentesco"
                            style="@style/SpinnerNoArrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:backgroundTint="@color/transparent" />


                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_cargo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/inputtext_normal"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:hint="@string/txt_cargo"
                            android:maxLines="1"
                            android:paddingLeft="6dp"
                            android:textColorHint="@color/texthint"
                            android:theme="@style/TextLabel"
                            app:passwordToggleTint="@color/hint_color"
                            tools:ignore="UnusedAttribute">

                            <EditText
                                android:id="@+id/editCargo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColor="@color/texthint" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorParentescoMessage"
                            style="@style/generic_text_style_2"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.pagatodo.yaganaste.utils.customviews.CustomValidationEditText
                            android:id="@+id/editCargoold"
                            style="@style/FragmentElementWithValidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:formato="text"
                            app:hintText="@string/txt_cargo"
                            android:visibility="gone"
                            app:imageIsGone="true"
                            app:isSingleLine="true"
                            app:maxLength="30" />


                        <com.pagatodo.yaganaste.utils.customviews.ErrorMessage
                            android:id="@+id/errorCargoMessage"
                            style="@style/generic_text_style_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />



                </LinearLayout>


            </com.pagatodo.yaganaste.utils.customviews.BorderTitleLayout>


        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_elements"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/txtLegales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/terms_and_conditions_aditional_info"
                android:textSize="@dimen/text_screen_size_normal"
                app:tipo="Descripcion" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_navigation_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnBack"
                style="@style/buttonDirecctionBack"
                android:layout_weight="1"
                android:text="@string/backButton"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textSize="@dimen/generic_button_normal_text_size" />


            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <com.pagatodo.yaganaste.utils.customviews.StyleButton
                android:id="@+id/btnNext"
                style="@style/buttonSquareRoundedBlue"
                android:background="@drawable/button_rounded_blue"
                android:text="@string/nextButton"
                android:textAllCaps="false"
                android:textSize="@dimen/generic_button_normal_text_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
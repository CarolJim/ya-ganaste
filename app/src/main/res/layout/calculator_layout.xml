<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_amount_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/titleAmount"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="15dp" android:padding="4dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="1px"
        android:layout_height="1px"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_edittext_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_monto_entero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/whiteColor"
            android:textSize="46sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:textColor="@color/whiteColor"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_monto_decimal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00"
                android:textColor="@color/whiteColor"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

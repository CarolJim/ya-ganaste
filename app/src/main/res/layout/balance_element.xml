<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_element"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@null"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:id="@+id/view_element"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_tab_ya" />

            <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                android:id="@+id/text_option"
                style="@style/generic_text_style_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Estado de Cuenta"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--<View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>-->

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_menu"
        style="@style/generic_text_style_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/navigation_drawer_menu_seguridad" />

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/subtitle_menu"
        style="@style/generic_text_style_2_conoce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="@string/ajustes_notificar_suboption"
        android:visibility="gone"/>

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/notific_discreption"
        style="@style/generic_text_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="@string/notific_discreption"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <ListView
        android:id="@+id/security_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:divider="@android:color/transparent"></ListView>

</LinearLayout>

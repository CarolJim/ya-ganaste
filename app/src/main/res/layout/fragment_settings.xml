<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.sidebar.Settings.SettingsFragment">

    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
        android:id="@+id/title_menu"
        style="@style/generic_text_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/settings"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/settings_security"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_menu">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="2"
            android:text="@string/settings_security"
            android:textColor="@color/gray_slate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/goSettings_security"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/arrow_canvas_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/config_card_reader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_security">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="2"
            android:text="@string/config_card_reader"
            android:textColor="@color/gray_slate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/goConfig_card_reader"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/arrow_canvas_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unlink_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/config_card_reader">

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="2"
            android:text="@string/unlink_phone"
            android:textColor="@color/gray_slate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/goUnlink_phone"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/arrow_canvas_blue" />
    </LinearLayout>


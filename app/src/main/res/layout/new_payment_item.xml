<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:background="#a2a2a2"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemGallery"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgItemGalleryMark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:civ_border_color="#09CC20"
             />

        <ImageView
            android:id="@+id/imgItemGalleryPay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgItemGalleryStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="invisible"
            android:src="@color/bgColor"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            android:layout_alignRight="@+id/layoutImg"
            />

        <TextView
            android:id="@+id/textIniciales"
            android:layout_width="50dp"
            android:textColor="@color/whiteColor"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="FM"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/texthint"
        android:id="@+id/grid_text"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="Nombre Contacto largo"></TextView>

</LinearLayout>
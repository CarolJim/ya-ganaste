<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="21dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/txt_nombre_negocio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        style="@style/MainTabText"
                        android:textSize="@dimen/ad_em_tab_text_size"
                        android:text="Abarrotes 'Mi Lupita'"/>

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/txt_saldo_adq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        style="@style/MainTabText"
                        android:textSize="@dimen/ad_em_tab_mount_text_size"
                        android:text="$2750.00"
                        android:textColor="@color/colorAccent"/>

                    <com.pagatodo.yaganaste.utils.customviews.StyleTextView
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/MainTabText"
                        android:textSize="@dimen/ad_em_tab_text_size"
                        android:text="@string/saldo_pendiente"
                        android:textColor="@color/colorAccent"/>



                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dongle_alone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription"
                    android:padding="7dp"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
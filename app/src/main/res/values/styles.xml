<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@android:color/white</item>o
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@drawable/bg_gradient_bottom</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton</item>
    </style>

    <style name="AppThemeFullView" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@drawable/bg_gradient_bottom</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TransparentNoTitleBar" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonBarBottom" parent="Base.Widget.AppCompat.Button">
        <item name="android:buttonStyle">@drawable/button_tab</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/greencolor</item>
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <item name="android:colorForeground">@color/grayColor</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>

    </style>

    <style name="textSubTitle" parent="textTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/whiteColor_disable</item>
    </style>

    <style name="textDescInputs">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="buttonRoundedBlue">
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:background">@drawable/button_rounded_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="buttonRippleColor2">@drawable/button_rounded_blue</item>
        <item name="buttonNormalColor">@drawable/button_rounded_blue</item>
    </style>
    <style name="buttonSmallRoundedBlue">
        <item name="android:background">@drawable/button_rounded_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="buttonRippleColor2">@drawable/button_rounded_blue</item>
        <item name="buttonNormalColor">@drawable/button_rounded_blue</item>
    </style>
    <style name="buttonSmallRoundedGray">
        <!-- Crear shape con el estilo y color en gris para este boton  -->
        <item name="android:background">@color/grayColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="buttonRippleColor2">@drawable/button_rounded_blue</item>
        <item name="buttonNormalColor">@drawable/button_rounded_blue</item>
    </style>
    <style name="buttonSquareRoundedBlue">
        <item name="android:background">@drawable/button_rounded_square_blue</item>
        <item name="buttonRippleColor2">@drawable/button_rounded_square_blue</item>
        <item name="buttonNormalColor">@drawable/button_rounded_square_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginStart">60dp</item>
    </style>

    <style name="buttonRoundedStroke">
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:background">@drawable/button_rounded_stroke</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textHelp">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/whiteColor_disable</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textPinPadButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MultiChoiceDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowTitleBackgroundStyle">@style/DialogTitleBackground</item>
        <item name="android:windowBackground">@color/redcolor</item>
    </style>

    <style name="DialogTitleBackground">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Theme_DialogPrueba" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="InputTextForms">
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
    </style>

    <style name="TitleMargin">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioButtonTheme" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/whiteColor</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/radio_btn</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SpinnerNoArrow" parent="CustomSpinner">
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_elements</item>
        <item name="android:layout_marginRight">@dimen/margin_elements</item>
        <item name="android:layout_marginTop">@dimen/space_between_elements</item>
    </style>

    <style name="Spinner" parent="CustomSpinner">
        <item name="android:layout_marginLeft">@dimen/margin_elements</item>
        <item name="android:layout_marginRight">@dimen/margin_elements</item>
        <item name="android:layout_marginTop">@dimen/space_between_elements</item>
    </style>

    <style name="FragmentElement">
        <item name="android:layout_marginLeft">@dimen/margin_elements</item>
        <item name="android:layout_marginRight">@dimen/margin_elements</item>
        <item name="android:layout_marginTop">@dimen/space_between_elements</item>
    </style>

    <style name="FragmentElementTop" parent="FragmentElement">
        <item name="android:layout_marginTop">@dimen/margin_doble</item>
    </style>

    <style name="FragmentElementBottom" parent="FragmentElement">
        <item name="android:layout_marginBottom">@dimen/margin_doble</item>
    </style>

    <style name="BorderTitleStyle">
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:layout_marginRight">@dimen/margin_big</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="MainTabText">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">10sp</item>
        <item name="tipo">Subtitulo</item>
    </style>


    <style name="ItemMovement">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">12sp</item>
        <item name="tipo">Descripcion</item>
    </style>

    <style name="ButtonTabs" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonInviteAdq" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="buttonStrokeColor">@color/whiteColor</item>
        <item name="buttonNormalColor">@color/colorAccent</item>
        <item name="buttonRippleColor2">?attr/colorControlHighlight</item>
    </style>

    <style name="ButtonInviteAdqY" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="buttonStrokeColor">@color/whiteColor</item>
        <item name="buttonNormalColor">@color/whiteColor</item>
        <item name="buttonRippleColor2">@color/lightGrayColor</item>
    </style>

    <style name="textTitleDetailTransaction">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>

    </style>

    <style name="textDetailTransaction">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>

    </style>

    <style name="LoginTextView">
        <item name="android:textColor">@color/grayColor</item>
        <item name="android:textSize">14sp</item>
        <item name="tipo">Subtitulo</item>
    </style>

    <style name="TextErrorValidation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/redcolor</item>
        <item name="android:textSize">14sp</item>
        <item name="tipo">Descripcion</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_doble</item>
        <item name="android:layout_marginRight">@dimen/margin_doble</item>
        <item name="android:layout_marginTop">@dimen/margin_xsmall</item>
    </style>
</resources>

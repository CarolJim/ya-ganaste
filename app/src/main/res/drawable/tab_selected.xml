<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/tab_payments_stroke"
                android:color="@color/colorAccent" />
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>

    <item
        android:left="@dimen/tab_payments_stroke"
        android:right="@dimen/tab_payments_stroke"
        android:top="@dimen/tab_payments_stroke">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_select_color" />
            <padding
                android:bottom="2dp"
                android:left="2dp" />
            <corners
                android:topLeftRadius="@dimen/tab_payments_radius"
                android:topRightRadius="@dimen/tab_payments_radius" />
        </shape>
    </item>
</layer-list>
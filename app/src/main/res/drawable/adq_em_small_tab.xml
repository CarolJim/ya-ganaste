<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="10dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/colorAccent" android:width="2dp"/>
            <corners android:bottomLeftRadius="9dp"/>
        </shape>
    </item>


    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor"/>
            <padding android:left="3dp" android:bottom="3dp"/>
            <corners android:bottomLeftRadius="9dp" android:bottomRightRadius="9dp"/>
        </shape>
    </item>


    <item android:left="10dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/grayColor" android:width="2dp"/>
            <corners android:topRightRadius="9dp" android:topLeftRadius="9dp"/>
        </shape>
    </item>


    <item android:top="2dp" android:right="2dp" android:left="12dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor"/>
            <padding android:left="3dp" android:bottom="3dp"/>
            <corners android:topRightRadius="9dp" android:topLeftRadius="9dp"/>
        </shape>
    </item>


</layer-list>
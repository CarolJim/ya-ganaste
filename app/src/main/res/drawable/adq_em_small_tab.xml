<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" />
            <corners android:bottomLeftRadius="9dp" />
        </shape>
    </item>


    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor" />
            <padding
                android:bottom="3dp"
                android:left="3dp" />
            <corners
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp" />
        </shape>
    </item>


    <item android:left="10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/grayColor" />
            <corners
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp" />
        </shape>
    </item>


    <item
        android:left="12dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/bgColor" />
            <padding
                android:bottom="3dp"
                android:left="3dp" />
            <corners
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp" />
        </shape>
    </item>


</layer-list>
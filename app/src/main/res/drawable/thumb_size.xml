<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/seekbar_thumb_width"
                android:height="@dimen/seekbar_thumb_height" />
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/seekbar_radius" />
        </shape>
    </item>

    <item
        android:width="@dimen/seekbar_thumb_arrow_width"
        android:height="@dimen/seekbar_thumb__arrow_height"
        android:gravity="center|right"
        android:right="5dp">
        <bitmap android:src="@drawable/arrow_icon" />
    </item>
</layer-list>

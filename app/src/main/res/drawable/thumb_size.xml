<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/seekbar_thumb_width"
                android:height="@dimen/seekbar_thumb_height" />
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/seekbar_radius" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/seekbbar_thumb_arrow_margin_top_bottom"
        android:drawable="@drawable/arrow_canvas"
        android:gravity="center|right"
        android:left="@dimen/seekbar_thumb_arrow_left"
        android:right="9.3dp"
        android:top="@dimen/seekbbar_thumb_arrow_margin_top_bottom">

        <!--rearBitmap android:src="@drawable/arrow_icon"/-->
    </item>
</layer-list>

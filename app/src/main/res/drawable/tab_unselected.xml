<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="10dp">
        <shape>
            <stroke
                android:width="@dimen/tab_payments_stroke"
                android:color="@color/colorAccent" />
        </shape>
    </item>

    <item android:bottom="@dimen/tab_payments_stroke">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/tab_payments_stroke"
                android:color="@color/grayColor" />
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>


    <item
        android:bottom="@dimen/tab_payments_stroke"
        android:left="@dimen/tab_payments_stroke"
        android:right="@dimen/tab_payments_stroke"
        android:top="@dimen/tab_payments_stroke">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <padding
                android:bottom="2dp"
                android:left="2dp" />
            <corners
                android:topLeftRadius="@dimen/tab_payments_radius"
                android:topRightRadius="@dimen/tab_payments_radius" />
        </shape>
    </item>


</layer-list>
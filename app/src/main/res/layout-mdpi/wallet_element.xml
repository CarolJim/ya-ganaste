<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <eu.davidea.flipview.FlipView
        android:id="@+id/cardflip_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:enableInitialAnimation="false"
        app:frontBackgroundColor="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rearBackgroundColor="@color/transparent"
        app:rearImageAnimation="@anim/grow_from_start_x_axis" />

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="201dp"
        android:layout_height="126.1dp"
        android:scaleX=".9"
        android:scaleY=".9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/chip_pin" />

        <com.pagatodo.yaganaste.utils.customviews.StyleTextView
            android:id="@+id/title_negocio"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Travelling Gray" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

